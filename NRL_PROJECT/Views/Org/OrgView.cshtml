@model NRL_PROJECT.Models.User

<h1 class="text-3xl font-bold mb-6 text-gray-800">
    Velkommen, @Model.UserName!
</h1>

<div class="bg-white shadow-md rounded-lg p-6 border border-gray-200">

    <p class="text-lg text-gray-700 mb-4">

        @if (Model.Organisation == null)
        {
            <!-- Brukeren har ingen organisasjon -->
            <span class="text-red-600 font-semibold">
                Du er logget inn, men har ikke f친tt tildelt en organisasjon enn친.
            </span>
        }
        else
        {
            <!-- Rolle-avhengig tekst -->
            @if (User.IsInRole("ExternalOrg"))
            {
                <span>
                    Du er logget inn som ekstern organisasjonsbruker for
                    <strong>@Model.Organisation.OrgName</strong>.
                </span>
            }
            else if (User.IsInRole("Registrar"))
            {
                <span>
                    Du er logget inn som registerf칮rer tilknyttet
                    <strong>@Model.Organisation.OrgName</strong>.
                </span>
            }
            else if (User.IsInRole("Admin"))
            {
                <span>
                    Du er logget inn som administrator.
                </span>
            }
        }

    </p>

    <p class="text-gray-600 mb-6">
        Herfra kan du se og filtrere alle rapporter som er innsendt av brukere i organisasjonen din.
    </p>

    @if (Model.Organisation != null)
    {
        <a asp-controller="Org"
           asp-action="OrgReportView"
           class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition">
            游늯 G친 til organisasjonens rapporter
        </a>
    }
    else
    {
        <p class="text-sm text-gray-500">
            Du m친 tildeles en organisasjon f칮r du kan se rapporter.
        </p>
    }
</div>
