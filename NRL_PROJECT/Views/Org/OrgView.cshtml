@model NRL_PROJECT.Models.User

<div class="min-h-[70svh] w-full bg-gradient-to-b from-green-100 to-blue-100">
    <div class="mx-auto max-w-4xl px-6 py-12">

        <!-- Top: headline + accent -->
        <header class="mb-8 flex flex-col gap-3 sm:flex-row sm:items-end sm:justify-between">
            <div>
                <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight text-green-700">
                    Velkommen, @Model.UserName!
                </h1>
                <p class="mt-1 text-gray-600">
                    Du er logget inn som ekstern organisasjonsbruker
                    @if (!string.IsNullOrWhiteSpace(Model.OrgName))
                    {
                        <text>for <strong>@Model.OrgName</strong>.</text>
                    }
                    else
                    {
                        <text>for en organisasjon.</text>
                    }
                </p>
            </div>
            <div class="h-2 w-40 rounded-full bg-gradient-to-r from-green-600 to-blue-600"></div>
        </header>

        <!-- Welcome card -->
        <section class="rounded-2xl border border-white/70 bg-white/90 backdrop-blur shadow-xl overflow-hidden">
            <div class="h-1 bg-gradient-to-r from-green-600 via-blue-600 to-green-600"></div>

            <div class="p-6 md:p-8">
                <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
                    <div class="flex items-start gap-4">
                        <div class="inline-flex h-12 w-12 items-center justify-center rounded-2xl
                                    bg-gradient-to-br from-green-100 to-blue-100 text-blue-700 shadow">
                            <!-- clipboard icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M9 5h6M9 9h6M9 13h6M5 7h.01M5 11h.01M5 15h.01"/>
                            </svg>
                        </div>

                        <div>
                            <h2 class="text-xl md:text-2xl font-bold text-gray-900">
                                Organisasjonens rapporter
                            </h2>
                            <p class="mt-1 text-gray-600">
                                Se og filtrer alle innsendte rapporter fra din organisasjon.
                            </p>
                        </div>
                    </div>

                    <a asp-controller="Org"
                       asp-action="OrgReportView"
                       class="inline-flex items-center justify-center gap-2 rounded-full bg-blue-600 px-6 py-3
                              text-white font-semibold shadow-lg hover:bg-blue-700 hover:shadow-xl transition">
                        GÃ¥ til rapporter
                    </a>
                </div>
            </div>

            <div class="px-6 py-4 bg-white/70 border-t border-gray-100">
                <p class="text-sm text-gray-500">
                    Trenger du hjelp? Ta kontakt med systemansvarlig i organisasjonen din.
                </p>
            </div>
        </section>
    </div>
</div>
