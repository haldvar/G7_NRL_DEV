@model NRL_PROJECT.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registrer";
}

<h2>Registrer ny bruker</h2>

<form asp-action="Register" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <!-- ðŸš« INGEN ORGANISASJONSFELT HER (Alternativ A) -->

    <div class="form-group">
        <label asp-for="RoleName"></label>
        <select asp-for="RoleName" class="form-control">
            <option value="">Velg rolle</option>
            <option value="Admin">Admin</option>
            <option value="Pilot">Pilot</option>
            <option value="Registrar">Registrar</option>
            <option value="ExternalOrg">ExternalOrg</option>
        </select>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Registrer</button>
</form>

<!-- Login Redirect -->
<div class="mt-4 text-center">
    <span class="text-muted">Har du allerede en konto?</span>
    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary ml-2">
        Logg inn her
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
