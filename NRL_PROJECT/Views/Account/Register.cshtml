@model NRL_PROJECT.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registrer ny bruker";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!-- Fade-in via transition (no keyframes needed) -->
<div class="min-h-[100dvh] flex items-center justify-center px-4">
    <div id="register-card" class="w-full max-w-md opacity-0 translate-y-2 transition-all duration-500 ease-out">
        <div class="relative rounded-3xl bg-white/95 backdrop-blur shadow-2xl border border-gray-200 overflow-hidden">
            <!-- Accent bar -->
            <div class="h-2 bg-gradient-to-r from-green-600 via-blue-600 to-green-600"></div>

            <div class="p-6 sm:p-7">
                <div class="mb-6 text-center">
                    <h1 class="text-2xl font-extrabold tracking-tight text-green-700">@ViewData["Title"]</h1>
                    <p class="text-gray-600 text-sm mt-1">Fyll inn feltene under for Ã¥ opprette en konto.</p>
                </div>

                <form asp-action="Register" method="post" class="space-y-5">
                    @Html.AntiForgeryToken()

                    <!-- Validation summary -->
                    <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>

                    <!-- UserName -->
                    <div>
                        <label asp-for="UserName" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                        <input asp-for="UserName"
                               class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400
                                      focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="UserName" class="mt-1 block text-sm text-red-600"></span>
                    </div>

                    <!-- Email -->
                    <div>
                        <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                        <input asp-for="Email" type="email" autocomplete="email"
                               class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400
                                      focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Email" class="mt-1 block text-sm text-red-600"></span>
                    </div>

                    <!-- Password -->
                    <div>
                        <label asp-for="Password" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                        <input asp-for="Password" type="password" autocomplete="new-password"
                               class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400
                                      focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Password" class="mt-1 block text-sm text-red-600"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label asp-for="ConfirmPassword" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                        <input asp-for="ConfirmPassword" type="password" autocomplete="new-password"
                               class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400
                                      focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="ConfirmPassword" class="mt-1 block text-sm text-red-600"></span>
                    </div>

                    <!-- First/Last name -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="FirstName" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                            <input asp-for="FirstName"
                                   class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400
                                          focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="FirstName" class="mt-1 block text-sm text-red-600"></span>
                        </div>
                        <div>
                            <label asp-for="LastName" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                            <input asp-for="LastName"
                                   class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400
                                          focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                            <span asp-validation-for="LastName" class="mt-1 block text-sm text-red-600"></span>
                        </div>
                    </div>

                    <!-- OrgName -->
                    <!-- <div>
                        <label asp-for="OrgName" class="block text-sm font-semibold text-gray-700 mb-1"></label>
                        <input asp-for="OrgName"
                               class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400
                                      focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="OrgName" class="mt-1 block text-sm text-red-600"></span>
                    </div> -->

                    <!-- Actions -->
                    <div class="pt-2 flex flex-col sm:flex-row gap-3">
                        <button type="submit"
                                class="inline-flex justify-center items-center px-6 py-3 rounded-full font-semibold
                                       bg-blue-600 text-white shadow-md hover:bg-blue-700 transition">
                            Opprett ny bruker
                        </button>
                        <a asp-controller="Account" asp-action="Login"
                           class="inline-flex justify-center items-center px-6 py-3 rounded-full font-semibold
                                  bg-gray-100 text-gray-700 hover:bg-gray-200 transition text-center">
                            Jeg har allerede konto
                        </a>
                    </div>
                </form>
            </div>

            <!-- Bottom accent -->
            <div class="h-2 bg-gradient-to-r from-blue-600 to-green-600"></div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        // Trigger fade-in after mount
        document.addEventListener('DOMContentLoaded', () => {
            const el = document.getElementById('register-card');
            if (el) requestAnimationFrame(() => el.classList.remove('opacity-0', 'translate-y-2'));
        });
    </script>
}
