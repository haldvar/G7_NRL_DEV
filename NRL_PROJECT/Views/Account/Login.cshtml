@using NRL_PROJECT.Models.ViewModels
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity

@model LoginViewModel
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Logg inn";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
@@keyframes nrlFadeIn {
  from { opacity: 0; transform: translateY(8px); } 
  to   { opacity: 1; transform: translateY(0); } 
}
.nrl-animate-fade { animation: nrlFadeIn .5s ease-out both; }

@@keyframes nrlPanX {
    0%   { transform: translateX(-2%) }
    50%  { transform: translateX(2%) }
    100% { transform: translateX(-2%) }
}
.nrl-pan-x-slow {
    animation: nrlPanX 60s linear infinite;
    will-change: transform;
}

</style>

<div class="fixed inset-0 flex items-center justify-center px-4 z-10 ">
    <div class="w-full max-w-sm nrl-animate-fade">
        <div class="relative bg-white/95 backdrop-blur rounded-3xl shadow-2xl border border-gray-200 overflow-hidden">
            <!-- Accent bar -->
            <div class="h-2 bg-gradient-to-r from-green-600 via-blue-600 to-green-600"></div>

            <div class="p-8">
                <div class="mb-6 text-center">
                    <img src="~/Img/Kartverket_logo.svg.png" alt="Kartverket" class="h-[100px] w-auto opacity-90 mx-auto mb-10">
                    <p class="text-gray-600 text-sm mt-1">Velkommen — vennligst logg inn for å fortsette.</p>
                </div>

                <form asp-controller="Account"
                      asp-action="Login"
                      asp-route-returnurl="@ViewData["ReturnUrl"]"
                      method="post"
                      class="space-y-6">
                    @Html.AntiForgeryToken()

                    <!-- Validation summary -->
                    <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>

                    <!-- Email -->
                    <div>
                        <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                        <input asp-for="Email"
                               class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400
                                      focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                               autocomplete="username" />
                        <span asp-validation-for="Email" class="mt-1 block text-sm text-red-600"></span>
                    </div>

                    <!-- Password -->
                    <div>
                        <div class="flex items-center justify-between mb-2">
                            <label asp-for="Password" class="block text-sm font-semibold text-gray-700"></label>
                            <a asp-action="ForgotPassword"
                               class="text-sm font-medium text-blue-700 hover:text-blue-800 underline">
                                Glemt passord?
                            </a>
                        </div>
                        <input asp-for="Password" type="password"
                               class="w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400
                                      focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                               autocomplete="current-password" />
                        <span asp-validation-for="Password" class="mt-1 block text-sm text-red-600"></span>
                    </div>

                    <!-- Remember me -->
                    <div class="flex items-center justify-between">
                        <label asp-for="RememberMe" class="inline-flex items-center gap-2 text-sm text-gray-700">
                            <input asp-for="RememberMe"
                                   class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>

                        <!-- Optional register link on the right -->
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]"
                           class="text-sm font-medium text-blue-700 hover:text-blue-800 underline">
                            Registrere ny bruker?
                        </a>
                    </div>

                    <!-- Actions -->
                    <div class="pt-2 flex flex-col sm:flex-row gap-3">
                        <button type="submit"
                                class="inline-flex justify-center items-center px-6 py-3 rounded-full font-semibold
                                       bg-blue-600 text-white shadow-md hover:bg-blue-700 transition">
                            Logg inn
                        </button>
                        <a asp-action="Index" asp-controller="Home"
                           class="inline-flex justify-center items-center px-6 py-3 rounded-full font-semibold
                                  bg-gray-100 text-gray-700 hover:bg-gray-200 transition">
                            Avbryt
                        </a>
                    </div>
                </form>
            </div>

            <!-- Bottom accent -->
            <div class="h-2 bg-gradient-to-r from-blue-600 to-green-600"></div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
