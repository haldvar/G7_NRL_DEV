@{
    ViewData["Title"] = "Glemt passord, bekreftelse";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="min-h-[100dvh] flex items-center justify-center px-4">
    <div id="confirm-card" class="w-full max-w-md opacity-0 translate-y-2 transition-all duration-500 ease-out">
        <div class="relative rounded-3xl bg-white/95 backdrop-blur shadow-2xl border border-gray-200 overflow-hidden">
            <!-- Accent bar -->
            <div class="h-2 bg-gradient-to-r from-green-600 via-blue-600 to-green-600"></div>

            <div class="p-6 sm:p-7">
                <div class="mb-5 text-center">
                    <div class="mx-auto mb-4 inline-flex h-12 w-12 items-center justify-center rounded-2xl
                                bg-gradient-to-br from-green-100 to-blue-100 text-green-700">
                        ✔
                    </div>
                    <h1 class="text-2xl font-extrabold tracking-tight text-green-700">@ViewData["Title"]</h1>
                    <p class="text-gray-600 text-sm mt-2">
                        Sjekk e-posten din for instruksjoner om å bytte passord.
                    </p>
                </div>

                <div class="flex flex-col sm:flex-row gap-3 pt-2">
                    <a asp-controller="Account" asp-action="Login"
                       class="inline-flex justify-center items-center px-6 py-3 rounded-full font-semibold
                              bg-blue-600 text-white shadow-md hover:bg-blue-700 transition">
                        Til innlogging
                    </a>
                    <a asp-controller="Home" asp-action="Index"
                       class="inline-flex justify-center items-center px-6 py-3 rounded-full font-semibold
                              bg-gray-100 text-gray-700 hover:bg-gray-200 transition">
                        Hjem
                    </a>
                </div>
            </div>

            <!-- Bottom accent -->
            <div class="h-2 bg-gradient-to-r from-blue-600 to-green-600"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Fade-in the card on mount
        document.addEventListener('DOMContentLoaded', () => {
            const el = document.getElementById('confirm-card');
            if (el) requestAnimationFrame(() => el.classList.remove('opacity-0', 'translate-y-2'));
        });
    </script>
}
