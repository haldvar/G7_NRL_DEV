@model NRL_PROJECT.Models.MapData

<div class="max-w-2xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold text-purple-700 text-center mb-6">Map Overview</h1>
    <p class="text-gray-700 text-center mb-8">Thank you for registering map data! Here's what you registered:</p>

    <div class="bg-white shadow-md rounded-lg p-6 space-y-4">
        <div>
            <h2 class="text-sm font-semibold text-gray-500 uppercase">Current Location</h2>
            <p class="text-lg text-gray-800">@Model.CurrentLocation</p>
        </div>

     
        <div>
            <h2 class="text-sm font-semibold text-gray-500 uppercase">Description</h2>
            <p class="text-lg text-gray-800">@Model.DescriptionOfLocation</p>
        </div>
    </div>

    <div class="mt-8 text-center">
        <a asp-action="Index" asp-controller="Home" class="inline-block bg-purple-600 text-black px-6 py-2 rounded hover:bg-purple-700 transition">
            Back to Home
        </a>
    </div>
</div>
