@model string
@{
    ViewData["Title"] = "Group7";
    Layout = "_Layout";
}

<div class="min-h-screen w-full">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">

    <!-- Hero -->
    <header class="mb-8 flex flex-col gap-3 sm:flex-row sm:items-end sm:justify-between">
      <div>
        <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight text-green-700">
          Portal
        </h1>
        <p class="mt-1 text-gray-600">@Model</p>
      </div>
      <div class="h-2 w-40 rounded-full bg-gradient-to-r from-green-600 to-blue-600"></div>
    </header>

    <!-- Stable cards grid -->
    <section class="grid grid-cols-12 gap-6 items-stretch content-start">

      <!-- CARD 1 -->
      <a asp-controller="Map" asp-action="ObstacleAndMapForm"
         class="col-span-12 sm:col-span-6 lg:col-span-4 block">
        <div class="h-full overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-xl transition-shadow hover:shadow-2xl flex flex-col">
          <div class="h-2 bg-gradient-to-r from-green-600 via-blue-600 to-green-600"></div>

          <div class="flex-1 p-6 flex flex-col min-w-0">
            <div class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-2xl
                        bg-gradient-to-br from-green-100 to-blue-100 text-blue-700 shrink-0">
              <!-- Exclamation Triangle -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M12 9v3m0 4h.01M10.29 3.86l-7.1 12.26A1 1 0 004.1 18h15.8a1 1 0 00.91-1.88l-7.1-12.26a1 1 0 00-1.72 0z"/>
              </svg>
            </div>

            <!-- Reserve space so headings don't wrap differently -->
            <h2 class="text-xl md:text-2xl font-bold text-gray-900 leading-tight min-h-[2.25rem]">
              Meld inn luftfartshinder
            </h2>

            <!-- Cap description height to avoid row wobble -->
            <p class="mt-1 text-gray-600 min-h-[2.5rem]">
              Registrer hinder, legg ved bilde og sett posisjon i kart.
            </p>

            <!-- Pin CTA to the bottom -->
            <div class="mt-auto pt-5">
              <span class="inline-flex items-center gap-2 rounded-full bg-blue-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-blue-700">
                Start registrering
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </div>
          </div>

          <div class="h-2 bg-gradient-to-r from-blue-600 to-green-600"></div>
        </div>
      </a>

      <!-- CARD 2 -->
      <a asp-controller="Map" asp-action="ReportListOverview"
         class="col-span-12 sm:col-span-6 lg:col-span-4 block">
        <div class="h-full overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-xl transition-shadow hover:shadow-2xl flex flex-col">
          <div class="h-2 bg-gradient-to-r from-green-600 to-blue-600"></div>

          <div class="flex-1 p-6 flex flex-col min-w-0">
            <div class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-2xl
                        bg-gradient-to-br from-green-100 to-blue-100 text-blue-700 shrink-0">
              <!-- Clipboard List -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 5h6M9 9h6M9 13h6M5 7h.01M5 11h.01M5 15h.01"/>
              </svg>
            </div>

            <h2 class="text-xl font-bold text-gray-900 leading-tight min-h-[2.25rem]">
              Hinderlogg
            </h2>
            <p class="mt-1 text-gray-600 min-h-[2.5rem]">
              Se alle innrapporterte hinder.
            </p>

            <div class="mt-3 flex items-center gap-2">
              <span class="inline-flex items-center rounded-full border border-blue-200 bg-blue-50 px-3 py-1 text-xs font-semibold text-blue-700">
                Antall rapporter:
                <span class="ml-2 text-sm font-bold">@ViewBag.ReportCount</span>
              </span>
            </div>

            <div class="mt-auto pt-5">
              <span class="inline-flex items-center gap-2 rounded-full bg-gray-100 px-4 py-2 text-sm font-semibold text-gray-700 transition hover:bg-gray-200">
                Åpne logg
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </div>
          </div>

          <div class="h-2 bg-gradient-to-r from-blue-600 to-green-600"></div>
        </div>
      </a>

      <!-- CARD 3 -->
      <a asp-controller="Map" asp-action="MapView"
         class="col-span-12 sm:col-span-6 lg:col-span-4 block">
        <div class="h-full overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-xl transition-shadow hover:shadow-2xl flex flex-col">
          <div class="h-2 bg-gradient-to-r from-green-600 to-blue-600"></div>

          <div class="flex-1 p-6 flex flex-col min-w-0">
            <div class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-2xl
                        bg-gradient-to-br from-green-100 to-blue-100 text-blue-700 shrink-0">
              <!-- Map -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 01.553-.894L9 2m6 0l5.447 2.724A1 1 0 0121 5.618v10.764a1 1 0 01-.553.894L15 22m-6-2l6-18"/>
              </svg>
            </div>

            <h2 class="text-xl font-bold text-gray-900 leading-tight min-h-[2.25rem]">
              Situasjonskart
            </h2>
            <p class="mt-1 text-gray-600 min-h-[2.5rem]">
              Utforsk hinder og posisjoner i kartet.
            </p>

            <div class="mt-auto pt-5">
              <span class="inline-flex items-center gap-2 rounded-full bg-gray-100 px-4 py-2 text-sm font-semibold text-gray-700 transition hover:bg-gray-200">
                Åpne kart
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </span>
            </div>
          </div>

          <div class="h-2 bg-gradient-to-r from-blue-600 to-green-600"></div>
        </div>
      </a>

    </section>

    <!-- Footer links -->
    <footer class="mt-10 flex flex-col items-center justify-center gap-4 text-sm text-gray-600 sm:flex-row">
      <a asp-action="Privacy" class="inline-flex items-center gap-2 transition hover:text-blue-700">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 11c.828 0 1.5.672 1.5 1.5v4.5h-3v-4.5c0-.828.672-1.5 1.5-1.5zM6 11V7a6 6 0 1112 0v4" />
        </svg>
        Personvern
      </a>
      <span class="hidden sm:inline text-gray-400">|</span>
      <a asp-action="About" class="inline-flex items-center gap-2 transition hover:text-blue-700">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M5.121 17.804A9 9 0 1118.879 17.804M12 7a4 4 0 100 8 4 4 0 000-8z" />
        </svg>
        Om prosjektet
      </a>
    </footer>
  </div>
</div>
