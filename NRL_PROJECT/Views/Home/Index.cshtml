@model string
@{
    ViewData["Title"] = "Group7";
}

<div class="flex min-h-screen flex-col items-center justify-center bg-gradient-to-b from-slate-900 via-sky-900 to-sky-700 px-4 py-10 font-sans">

    <!-- Title Section -->
    <div class="mb-10 text-center">
        <h1 class="text-5xl font-extrabold tracking-tight text-sky-100 drop-shadow-lg md:text-6xl">
            ✈️ Aviation Obstacle Registration
        </h1>
        <p class="mt-4 text-lg text-sky-200 italic md:text-xl">
            @Model
        </p>
    </div>

   

    <!-- MAIN ACTION - Register with Map -->
    <div class="mb-8 w-full max-w-3xl">
        <a asp-action="ObstacleAndMapForm" asp-controller="Home"
           class="flex transform flex-col items-center justify-center rounded-3xl bg-amber-500 px-10 py-12 text-3xl font-bold text-white shadow-2xl transition-all duration-300 hover:shadow-3xl hover:-translate-y-1 hover:scale-[1.03] hover:bg-amber-600 md:text-4xl">
            <span class="mb-4 text-6xl">🛰️</span>
            Register with Map
        </a>
    </div>

    <!-- SECONDARY ACTIONS -->
    <div class="mb-12 grid w-full max-w-4xl grid-cols-1 gap-6 sm:grid-cols-2">

        <!-- View Reports -->
        <a asp-controller="Home" asp-action="ReportListOverview"
           class="flex transform flex-col items-center justify-center rounded-2xl bg-indigo-600 px-8 py-10 text-2xl font-semibold text-white shadow-lg transition-all duration-300 hover:-translate-y-1 hover:bg-indigo-700 hover:shadow-2xl md:text-3xl">
            <span class="mb-3 text-5xl">📋</span>
            View Reports
        </a>

        <!-- Go to Map -->
        <a asp-controller="Map" asp-action="MapView"
           class="flex transform flex-col items-center justify-center rounded-2xl bg-sky-600 px-8 py-10 text-2xl font-semibold text-white shadow-lg transition-all duration-300 hover:-translate-y-1 hover:bg-sky-700 hover:shadow-2xl md:text-3xl">
            <span class="mb-3 text-5xl">🗺️</span>
            Go to Map
        </a>
    </div>

    <!-- Info Card -->
    <div class="mb-10 w-full max-w-xl rounded-xl border-l-8 border-sky-500 bg-gradient-to-r from-sky-100 to-blue-50 p-5 text-center text-sky-800 shadow">
        <p class="text-xl font-semibold">
            <span class="mr-2 text-2xl">📊</span>
            Total obstacle reports:
            <span class="ml-2 text-2xl font-extrabold text-sky-900">@ViewBag.ReportCount</span>
        </p>
    </div>



    <!-- FOOTER LINKS -->
    <div class="mt-auto flex flex-col items-center justify-center gap-4 text-sm text-slate-300 opacity-80 sm:flex-row">
        <a asp-action="Privacy"
           class="flex items-center gap-2 text-sm transition hover:text-white sm:text-base">
            🔒 <span>Privacy Policy</span>
        </a>
        <span class="hidden text-slate-500 sm:inline">|</span>
        <a asp-action="About"
           class="flex items-center gap-2 text-sm transition hover:text-white sm:text-base">
            👨‍✈️ <span>About Group 7</span>
        </a>
    </div>

    <div class="mt-4">
        <a asp-controller="Registrar"
        asp-action="RegistrarView"
        class="btn btn-primary btn-lg">
         Gå til registerførerside(test)
        </a>
    </div>
</div>
