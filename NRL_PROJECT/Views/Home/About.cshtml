@{
    ViewData["Title"] = "Group7";
    Layout = "_Layout";
}

<div class="h-screen w-full">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Outer card with subtle glow -->
        <div class="relative rounded-3xl bg-white shadow-xl border border-gray-200 overflow-hidden">
            <!-- Animated accent bar -->
            <div class="h-2 bg-gradient-to-r from-green-600 via-blue-600 to-green-600 animate-pulse"></div>

            <!-- Header -->
            <div class="p-8 pb-4 text-center">
                <div class="mx-auto mb-5 inline-flex h-14 w-14 items-center justify-center rounded-2xl bg-gradient-to-br from-green-500 to-blue-600 text-white shadow-md">
                    <!-- simple logo placeholder if you don’t have one here -->
                    <span class="text-xl font-extrabold">G7</span>
                </div>
                <h1 class="text-4xl font-extrabold tracking-tight text-green-700">
                    @ViewData["Title"]
                </h1>
                <p class="mt-3 text-gray-600 text-lg">
                    Dette er menneskene bak denne rapporteringsløsningen:
                </p>
            </div>

            <!-- Team list -->
            <div class="p-8 pt-6">
                <ul class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    @foreach (var member in new[] { "Milana Dubkova", "Elise Fjeldstad", "Halvard Jansen", "Jan Kåre Treldal", "Emma Wolden", "Karoline Aas-Mehren" })
                    {
                        <li class="group">
                            <!-- Shiny chip: gradient border wrap + white inner --> 
                            <div class="p-[0px] rounded-2xl bg-gradient-to-r from-green-500 via-blue-500 to-green-500">
                                <div class="flex items-center gap-3 rounded-2xl bg-white px-5 py-3 p-[1px] shadow-sm transition
                                            group-hover:shadow-md group-hover:-translate-y-0.5">
                                    <!-- Avatar initials -->
                                    <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-gradient-to-br from-green-100 to-blue-100 text-blue-700 font-bold">
                                        @member.Split(' ').First()[0]@member.Split(' ').Last()[0]
                                    </div>
                                    <div class="flex-1 text-center sm:text-left">
                                        <span class="font-medium text-gray-800">@member</span>
                                    </div>
                                    <!-- Right-side sparkle dot -->
                                    <span class="hidden sm:inline-block h-2.5 w-2.5 rounded-full bg-gradient-to-br from-green-600 to-blue-600 shadow"></span>
                                </div>
                            </div>
                        </li>
                    }
                </ul>

                <!-- Footer -->
                <div class="mt-10 flex items-center justify-center">
                    <div class="rounded-full bg-gradient-to-r from-green-600 to-blue-600 px-4 py-1.5 text-white text-xs font-semibold shadow">
                        © 2025 — Group7
                    </div>
                </div>
            </div>

            <!-- Bottom accent -->
            <div class="h-2 bg-gradient-to-r from-green-600 via-blue-600 to-green-600 animate-pulse"></div>
        </div>
    </div>
</div>
