@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="flex justify-center items-center min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 px-4">
    <div class="bg-white shadow-lg rounded-2xl p-10 max-w-2xl w-full">
        <h1 class="text-4xl font-bold text-center text-gray-800 mb-6">
            @ViewData["Title"]
        </h1>

        <p class="text-gray-600 text-lg leading-relaxed mb-4">
            Use this page to detail your site's privacy policy.
        </p>

        <p class="text-gray-600 text-lg leading-relaxed">
            You can include sections about data collection, cookies, user rights, and any other relevant information here. Make sure your policy is clear and easy to read.
        </p>
    </div>
</div>
