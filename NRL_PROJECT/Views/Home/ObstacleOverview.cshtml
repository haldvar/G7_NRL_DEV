@model NRL_PROJECT.Models.ObstacleData

<div class="max-w-3xl mx-auto px-4 py-10">
    <h1 class="text-4xl font-extrabold text-green-700 text-center mb-6 tracking-wide">
        ✅ Obstacle Registered Successfully
    </h1>
    <p class="text-gray-600 text-center mb-10">
        Below is a summary of the obstacle you just submitted.
    </p>

    <div class="bg-white rounded-2xl shadow-lg p-8 space-y-6 border border-gray-200">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
                <h2 class="text-sm font-semibold text-gray-500">Name</h2>
                <p class="text-lg text-gray-800">@Model.ObstacleName</p>
            </div>
            <div>
                <h2 class="text-sm font-semibold text-gray-500">Type</h2>
                <p class="text-lg text-gray-800">@Model.ObstacleType</p>
            </div>
            <div>
                <h2 class="text-sm font-semibold text-gray-500">Height (m)</h2>
                <p class="text-lg text-gray-800">@Model.ObstacleHeight</p>
            </div>
            <div>
                <h2 class="text-sm font-semibold text-gray-500">Width (m)</h2>
                <p class="text-lg text-gray-800">@Model.ObstacleWidth</p>
            </div>
        </div>

        <div>
            <h2 class="text-sm font-semibold text-gray-500">Description</h2>
            <p class="text-gray-700">@Model.ObstacleDescription</p>
        </div>
    </div>

    <div class="text-center mt-10">
        <a asp-action="Index" asp-controller="Home"
           class="bg-blue-600 text-white px-8 py-3 rounded-xl font-semibold shadow-md hover:bg-blue-700 hover:shadow-lg transition">
            🔙 Back to Home
        </a>
    </div>
</div>
