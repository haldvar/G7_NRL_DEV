@model NRL_PROJECT.Models.ObstacleData

<div class="max-w-2xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold text-blue-700 text-center mb-6">Obstacle Overview</h1>
    <p class="text-gray-700 text-center mb-8">Thank you for registering the following obstacle:</p>

    <div class="bg-white shadow-md rounded-lg p-6 space-y-4">
        <div>
            <h2 class="text-sm font-semibold text-gray-500 uppercase">Name</h2>
            <p class="text-lg text-gray-800">@Model.ObstacleName</p>
        </div>

        <div>
            <h2 class="text-sm font-semibold text-gray-500 uppercase">Type</h2>
            <p class="text-lg text-gray-800">@Model.ObstacleType</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <h2 class="text-sm font-semibold text-gray-500 uppercase">Height</h2>
                <p class="text-lg text-gray-800">@Model.ObstacleHeight</p>
            </div>
            <div>
                <h2 class="text-sm font-semibold text-gray-500 uppercase">Width</h2>
                <p class="text-lg text-gray-800">@Model.ObstacleWidth</p>
            </div>
        </div>

        <div>
            <h2 class="text-sm font-semibold text-gray-500 uppercase">Description</h2>
            <p class="text-lg text-gray-800">@Model.ObstacleDescription</p>
        </div>
        <div class="mt-8 text-center">
            <a asp-action="Index" asp-controller="Home" class="inline-block bg-purple-600 text-black px-6 py-2 rounded hover:bg-purple-700 transition">
                Back to Home
            </a>
        </div>
    </div>
</div>
