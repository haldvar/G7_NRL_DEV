@model NRL_PROJECT.Models.ObstacleReportViewModel

<div class="min-h-screen bg-gradient-to-b from-slate-900 via-sky-900 to-sky-800 px-4 py-10 text-slate-100 font-sans">
    <div class="max-w-6xl mx-auto bg-slate-800/80 rounded-3xl shadow-2xl p-10 backdrop-blur-lg border border-slate-700">

        <!-- Title -->
        <div class="text-center mb-10">
            <h1 class="text-4xl md:text-5xl font-extrabold text-sky-400 tracking-tight">
                🛠️ Register Obstacle with Location
            </h1>
            <p class="text-slate-300 mt-3 text-lg">
                Enter obstacle details and mark the position on the map.
            </p>
        </div>

        <form asp-action="SubmitObstacleWithLocation" asp-controller="Home" method="post" class="space-y-10">

            <!-- Obstacle Info -->
            <div class="bg-slate-700/60 rounded-2xl p-8 shadow-lg border border-slate-600">
                <h2 class="text-2xl font-bold text-sky-300 mb-6">🧱 Obstacle Information</h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-sky-200">Name</label>
                        <input asp-for="ObstacleName" class="mt-1 block w-full bg-slate-900 border-slate-600 text-white rounded-lg px-3 py-2 focus:ring-2 focus:ring-sky-400 focus:outline-none" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-sky-200">Type</label>
                        <input asp-for="ObstacleType" class="mt-1 block w-full bg-slate-900 border-slate-600 text-white rounded-lg px-3 py-2 focus:ring-2 focus:ring-sky-400 focus:outline-none" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-sky-200">Height (m)</label>
                        <input asp-for="ObstacleHeight" type="number" step="0.01" class="mt-1 block w-full bg-slate-900 border-slate-600 text-white rounded-lg px-3 py-2 focus:ring-2 focus:ring-sky-400 focus:outline-none" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-sky-200">Width (m)</label>
                        <input asp-for="ObstacleWidth" type="number" step="0.01" class="mt-1 block w-full bg-slate-900 border-slate-600 text-white rounded-lg px-3 py-2 focus:ring-2 focus:ring-sky-400 focus:outline-none" />
                    </div>
                </div>

                <div class="mt-6">
                    <label class="block text-sm font-medium text-sky-200">Description</label>
                    <textarea asp-for="ObstacleDescription" rows="3" class="mt-1 block w-full bg-slate-900 border-slate-600 text-white rounded-lg px-3 py-2 focus:ring-2 focus:ring-sky-400 focus:outline-none"></textarea>
                </div>
            </div>

            <!-- Map Section -->
            <div class="bg-slate-700/60 rounded-2xl p-8 shadow-lg border border-slate-600">
                <h2 class="text-2xl md:text-3xl font-bold text-amber-400 mb-4 text-center">
                    🗺️ Draw Obstacle Location
                </h2>
                <p class="text-center text-slate-300 mb-8 text-lg">
                    Use the map tools to mark your obstacle. Only one drawing is saved.
                </p>

                <div class="bg-slate-900 rounded-2xl shadow-inner p-3">
                    <div id="mapDraw" class="rounded-xl border border-slate-600" style="height: 600px;"></div>
                    <p class="text-center text-slate-400 mt-4">
                        Toolbar (top-left) lets you draw or edit. Removing replaces your drawing.
                    </p>
                </div>
              
                <input type="hidden" id="geoInput" name="GeoJsonCoordinates" />
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col md:flex-row justify-center gap-6 mt-10">
                <button type="submit"
                        class="bg-emerald-600 hover:bg-emerald-700 text-white px-10 py-4 rounded-2xl font-bold text-xl shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all">
                    ✅ Submit Report
                </button>

                <a asp-action="Index" asp-controller="Home"
                   class="bg-red-600 hover:bg-red-700 text-white px-10 py-4 rounded-2xl font-bold text-xl shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all text-center">
                    ❌ Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/@@geoman-io/leaflet-geoman-free@latest/dist/leaflet-geoman.css" />

    <style>
        /* Større Geoman toolbar knapper for tablet/pilot */
        .leaflet-pm-toolbar {
            padding: 12px !important;
            background: rgba(255,255,255,0.95) !important;
            border-radius: 1rem !important;
        }

            .leaflet-pm-toolbar > .leaflet-pm-button {
                width: 60px !important;
                height: 60px !important;
                font-size: 2rem !important;
                border-radius: 1rem !important;
                margin-bottom: 6px !important;
            }
    </style>
}

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/@@geoman-io/leaflet-geoman-free@latest/dist/leaflet-geoman.min.js"></script>

    <script>
        // Init map
        const map = L.map('mapDraw').setView([58.333, 8.233], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OSM</a>'
        }).addTo(map);

        // Geoman controls
        map.pm.addControls({
            position: 'topleft',
            drawMarker: true,
            drawPolyline: true,
            drawPolygon: false,
            drawCircle: false,
            drawRectangle: false,
            editMode: true,
            removalMode: true
        });

        // Capture drawn geometry
        map.on('pm:create', e => {
            const geojson = e.layer.toGeoJSON();
            document.getElementById('geoInput').value = JSON.stringify(geojson.geometry.coordinates);
        });

        // Clear input when object removed
        map.on('pm:remove', () => {
            document.getElementById('geoInput').value = '';
        });
    </script>
}
