@model NRL_PROJECT.Models.ObstacleData

@{
    Layout = null;
}

<!DOCTYPE html>

<div>
    <h1>Obstacle Registration Form</h1>
    <p>Please register an obstacle:</p>
    <form asp-action="DataForm" method="post">
        <div>
            <label asp-for="ObstacleName">Obstacle Name:</label>    
            <input asp-for="ObstacleName" />
        </div>
        
        <div>
            <label asp-for="ObstacleHeight">Obstacle Height in meters:</label>
            <input asp-for="ObstacleHeight" />
        </div>
        
        <div>
            <label asp-for="ObstacleDescription">Obstacle Description:</label>
            <input asp-for="ObstacleDescription" />
        </div>
        
        <div>
            <button type="submit">Submit Data</button>
        </div>

    </form>
    
</div>