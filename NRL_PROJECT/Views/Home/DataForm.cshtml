@model NRL_PROJECT.Models.ObstacleData

<div class="max-w-2xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-blue-700 text-center mb-4">Obstacle Registration Form</h1>
    <p class="text-gray-700 text-center mb-6">Please register an obstacle below:</p>

    <form asp-action="DataForm" method="post" class="space-y-6">
        <div>
            <label asp-for="ObstacleName" class="block text-sm font-medium text-gray-800 mb-1">Obstacle Name</label>
            <input asp-for="ObstacleName" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="ObstacleName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="ObstacleType" class="block text-sm font-medium text-gray-800 mb-1">Obstacle Type</label>
            <input asp-for="ObstacleType" class="w-full border border-gray-300 rounded px-3 py-2" />
            <span asp-validation-for="ObstacleType" class="text-red-500 text-sm"></span>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <label asp-for="ObstacleHeight" class="block text-sm font-medium text-gray-800 mb-1">Height</label>
                <input asp-for="ObstacleHeight" class="w-full border border-gray-300 rounded px-3 py-2" />
                <span asp-validation-for="ObstacleHeight" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="ObstacleWidth" class="block text-sm font-medium text-gray-800 mb-1">Width</label>
                <input asp-for="ObstacleWidth" class="w-full border border-gray-300 rounded px-3 py-2" />
                <span asp-validation-for="ObstacleWidth" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div>
            <label asp-for="ObstacleDescription" class="block text-sm font-medium text-gray-800 mb-1">Description</label>
            <input asp-for="ObstacleDescription" class="w-full border border-gray-300 rounded px-3 py-2" />
        </div>

        <div class="text-center">
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition">
                Submit Data
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}