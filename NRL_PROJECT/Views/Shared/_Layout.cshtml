@using Microsoft.AspNetCore.Identity
@using NRL_PROJECT.Models
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NRL_PROJECT</title>

    <!-- Tailwind via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Leaflet -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-draw/dist/leaflet.draw.css" />

    <link rel="stylesheet" href="/lib/leaflet/leaflet.css" />
    <script src="/lib/leaflet/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/@@geoman-io/leaflet-geoman-free@latest/dist/leaflet-geoman.css" />
    <script src="https://unpkg.com/@@geoman-io/leaflet-geoman-free@latest/dist/leaflet-geoman.min.js"></script>
    @RenderSection("Styles", required: false)
</head>

<body class="flex min-h-screen flex-col bg-gradient-to-b from-gray-50 to-gray-100 text-gray-800">

    <!-- HEADER -->
    <header class="sticky top-0 z-50 bg-white shadow-md">
        <nav class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4">
            <!-- Left side: Logo + navigation -->
            <div class="flex items-center space-x-8">
                <!-- Logo -->
                <a class="text-2xl font-bold tracking-wide text-blue-700 transition hover:text-blue-800"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/kartverket-logo.png" alt="Kartverket" class="h-14 w-auto opacity-90" />
                </a>

                <!-- Desktop menu -->
                <div class="hidden space-x-6 font-medium md:flex">
                    
                   
                    <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="About">Om oss</a>
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ObstacleAndMapForm">Meld hinder</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Admin" asp-action="ManageUsers">Brukerh친ndtering</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ReportListOverview">Hinderlogg</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MapView">Situasjonskart</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Registrar" asp-action="RegistrarView">Rapporth친ndtering</a>
                    }

                    @if (User.IsInRole("Registrar"))
                    {
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ObstacleAndMapForm">Meld hinder</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ReportListOverview">Hinderlogg</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MapView">Situasjonskart</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Registrar" asp-action="RegistrarView">Rapporth친ndtering</a>
                    }

                    @if (User.IsInRole("Pilot"))
                    {
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ObstacleAndMapForm">Meld hinder</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ReportListOverview">Hinderlogg</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MapView">Situasjonskart</a>
                    }
                </div>
            </div>

            <!-- Right side: Statusbar -->
            <div class="hidden items-center space-x-6 text-sm font-medium md:flex">
                <span class="text-gray-600">游녻 Logget inn som <strong>@User.Identity.Name</strong></span>
                <span class="text-gray-600">
                    Antall rapporter:
                    <span class="ml-2 text-2xl font-extrabold text-gray-600">@ViewBag.ReportCount</span>
                </span>
                <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="rounded-lg bg-red-500 px-4 py-2 text-white transition hover:bg-red-600">Logg ut</button>
                </form>
            </div>

            <!-- Mobile menu button -->
            <button id="menu-btn" class="rounded-lg p-2 hover:bg-gray-100 focus:ring-2 focus:ring-blue-500 focus:outline-none md:hidden">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-gray-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </nav>

        <!-- Mobile dropdown -->
        <div id="mobile-menu" class="hidden border-t bg-white shadow-sm md:hidden">
            <div class="space-y-2 px-6 py-4">
                <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a>
                <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ObstacleAndMapForm">Meld hinder</a>
                <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="About">Om oss</a>


                @if (User.IsInRole("Admin"))
                {
                    <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Admin" asp-action="ManageUsers">Brukerh친ndtering</a>
                    <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ReportListOverview">Hinderlogg</a>
                    <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MapView">Situasjonskart</a>
                }

                @if (User.IsInRole("Registrar"))
                {
                    <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Registrar" asp-action="RegistrarView">Rapporth친ndtering</a>
                    <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ReportListOverview">Hinderlogg</a>
                    <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MapView">Situasjonskart</a>
                }

                @if (User.IsInRole("Pilot"))
                {
                    <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ReportListOverview">Hinderlogg</a>
                    <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MapView">Situasjonskart</a>
                }

                <!-- Statusbar in mobile menu -->
                <div class="border-t pt-4">
                    <span class="mb-2 block text-gray-600">游녻 Logget inn som <strong>@User.Identity.Name</strong></span>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="w-full rounded-lg bg-red-500 px-4 py-2 text-white transition hover:bg-red-600">Log out</button>
                    </form>
                </div>
            </div>
        </div>
       

      </header>
   

    <!-- MAIN CONTENT -->
    <main role="main" class="mx-auto max-w-5xl flex-grow px-6 py-10">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="mt-8 border-t bg-white">
        <div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4 text-sm text-gray-500">
            <span>&copy; 2025 - NRL_PROJECT</span>
            <a class="transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Mobile menu toggle -->
    <script>
        const menuBtn = document.getElementById("menu-btn");
        const mobileMenu = document.getElementById("mobile-menu");

        menuBtn.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
        });
    </script>
</body>
</html>
