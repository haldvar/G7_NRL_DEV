@using Microsoft.AspNetCore.Identity
@using NRL_PROJECT.Models
@inject UserManager<User> UserManager

@{
    // Optional: use a transparent PNG/SVG to float over the gradient (like the login layout).
    // Example in a controller: ViewBag.SiteBgUrl = Url.Content("~/Img/NRL_BG3.png");
    var siteBgUrl = ViewBag.SiteBgUrl as string;
    var hasBg = !string.IsNullOrWhiteSpace(siteBgUrl);
    var hideChrome = (ViewBag.HideChrome as bool?) ?? false;

}

<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NRL_PROJECT</title>

    <!-- Tailwind via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Leaflet -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-draw/dist/leaflet.draw.css" />

    <link rel="stylesheet" href="/lib/leaflet/leaflet.css" />
    <script src="/lib/leaflet/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/@@geoman-io/leaflet-geoman-free@latest/dist/leaflet-geoman.css" />
    <script src="https://unpkg.com/@@geoman-io/leaflet-geoman-free@latest/dist/leaflet-geoman.min.js"></script>
    @RenderSection("Styles", required: false)

    <style>
        html { -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; }
    </style>
</head>

<body class="relative m-0 flex min-h-[100dvh] flex-col text-gray-800">
    <!-- NRL background layer (behind everything) -->
    <div class="fixed inset-0 -z-10">
        <!-- Always-on gradient base -->
        <div class="absolute inset-0 bg-gradient-to-b from-green-100 to-blue-100"></div>

        @* Optional transparent overlay image (floats above gradient) *@
        @if (hasBg)
        {
            <img src="@siteBgUrl" alt="" aria-hidden="true"
                 class="absolute inset-0 h-full w-full object-cover select-none pointer-events-none" />
        }
        @* Optional subtle tint for readability (uncomment if you want a touch more contrast) *@
        @* <div class="absolute inset-0 bg-black/5"></div> *@
    </div>

    @if (!hideChrome)
    {
        <!-- HEADER -->
    <header class="sticky top-0 z-50 bg-white/90 backdrop-blur border-b border-gray-200 shadow-sm">
        <nav class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4">
            <!-- Left side: Logo + navigation -->
            <div class="flex items-center space-x-8">
                <img src="~/Img/Kartverket_logo.svg.png" alt="Kartverket" class="h-14 opacity-90" />

                <!-- Desktop menu -->
                <div class="hidden space-x-6 font-medium md:flex">
                    @* <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="About">Om oss</a> *@

                    @if (User.IsInRole("Admin"))
                    {
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ObstacleAndMapForm">Meld hinder</a>
                        <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Registrar" asp-action="RegistrarView">Rapporthåndtering</a>
                        <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Admin" asp-action="ManageUsers">Brukerhåndtering</a>
                        <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ReportListOverview">Hinderlogg</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MapView">Situasjonskart</a>
                    }

                    @if (User.IsInRole("Registrar"))
                    {
                        @* <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a> *@
                        @* <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ObstacleAndMapForm">Meld hinder</a> *@
                        <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Registrar" asp-action="RegistrarView">Rapporthåndtering</a>
                        <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ReportListOverview">Hinderlogg</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MapView">Situasjonskart</a>
                    }

                    @if (User.IsInRole("Pilot"))
                    {
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ObstacleAndMapForm">Meld hinder</a>
                        <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MyReports">Mine rapporter</a>
                        <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MapView">Situasjonskart</a>
                    }
                </div>
            </div>

            <!-- Right side: Statusbar -->
            <div class="hidden items-center space-x-6 text-sm font-medium md:flex">
                <span class="text-gray-700">Logget inn som <strong>@User.Identity.Name</strong></span>
                @* <span class="text-gray-700"> *@
                @*     Antall rapporter: *@
                @*     <span class="ml-2 text-2xl font-extrabold text-gray-700">@ViewBag.ReportCount</span> *@
                @* </span> *@
                <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="rounded-full bg-blue-600 px-4 py-2 font-semibold text-white transition hover:bg-blue-700">Logg ut</button>
                </form>
            </div>

            <!-- Mobile menu button -->
            <button id="menu-btn" class="rounded-lg p-2 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 md:hidden">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-gray-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </nav>

        <!-- Mobile dropdown -->
        <div id="mobile-menu" class="hidden border-t bg-white/95 backdrop-blur shadow-sm md:hidden">
            <div class="space-y-2 px-6 py-4">
                <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="Index">Hjem</a>
                <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ObstacleAndMapForm">Meld hinder</a>
                <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Home" asp-action="About">Om oss</a>

                @if (User.IsInRole("Admin"))
                {
                    <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Admin" asp-action="ManageUsers">Brukerhåndtering</a>
                    <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ReportListOverview">Hinderlogg</a>
                    <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MapView">Situasjonskart</a>
                }
                @if (User.IsInRole("Registrar"))
                {
                    <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Registrar" asp-action="RegistrarView">Rapporthåndtering</a>
                    <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ReportListOverview">Hinderlogg</a>
                    <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MapView">Situasjonskart</a>
                }
                @if (User.IsInRole("Pilot"))
                {
                    <a class="text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="ReportListOverview">Hinderlogg</a>
                    <a class="block text-gray-700 transition hover:text-blue-600" asp-area="" asp-controller="Map" asp-action="MapView">Situasjonskart</a>
                }

                <div class="border-t pt-4">
                    <span class="mb-2 block text-gray-700">Logget inn som <strong>@User.Identity.Name</strong></span>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="w-full rounded-full bg-blue-600 px-4 py-2 font-semibold text-white transition hover:bg-blue-700">Logg ut</button>
                    </form>
                </div>
            </div>
        </div>
    </header>
    }
    
    

    <!-- MAIN CONTENT -->
    <main role="main" class="flex-1 w-full">
        @RenderBody()
    </main>
    
    @if (!hideChrome)
    {
        <!-- FOOTER -->
        <footer class="mt-8 border-t bg-white/90 backdrop-blur">
            <div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4 text-sm text-gray-600">
                <span>&copy; 2025 - NRL_PROJECT</span>
                <a class="transition hover:text-blue-700" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Mobile menu toggle -->
    <script>
        const menuBtn = document.getElementById("menu-btn");
        const mobileMenu = document.getElementById("mobile-menu");
        if (menuBtn && mobileMenu) {
            menuBtn.addEventListener("click", () => mobileMenu.classList.toggle("hidden"));
        }
    </script>
</body>
</html>
