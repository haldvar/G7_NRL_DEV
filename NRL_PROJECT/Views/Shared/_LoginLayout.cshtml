@*
  Shared Login Layout — Minimal (NRL gradient + transparent overlay image)
*@
@{
    ViewBag.LoginBgUrl = Url.Content("~/Img/NRL_BG3.png");
    var bgUrl = ViewBag.LoginBgUrl as string; // e.g. Url.Content("~/Img/overlay.png") — ideally a transparent PNG/SVG
    var hasBg = !string.IsNullOrWhiteSpace(bgUrl);
}

<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NRL_PROJECT</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        html { -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; }
    
        @@keyframes nrlPanXBleed {
          0%   { transform: scale(1.08) translateX(-2%); }
          50%  { transform: scale(1.08) translateX(2%); }
          100% { transform: scale(1.08) translateX(-2%); }
        }
        .nrl-pan-x-bleed {
          animation: nrlPanXBleed 20s linear infinite;
          transform-origin: center;
          will-change: transform;
        }
    </style>
</head>



<body class="min-h-[100dvh] m-0 flex flex-col font-sans text-gray-800">
<!-- Background layer -->
<div class="fixed inset-0 -z-10">
    <!-- Always-on gradient base -->
    <div class="absolute inset-0 bg-gradient-to-b from-green-100 to-blue-100"></div>

    @* Optional transparent image overlay (stretches to viewport) *@
    @if (hasBg)
    {
        <div class="animate-pulse">
            <img src="@bgUrl"
                 alt=""
                 aria-hidden="true"
                 class="absolute inset-0 h-full w-full nrl-pan-x-bleed object-cover select-none pointer-events-none" />
        </div>
        
        @* If your image isn’t transparent enough, you could add: style="opacity:0.9" *@
    }

    @* Optional readability overlay on top of both (tint); remove if not needed *@
    @* <div class="absolute inset-0 bg-black/10"></div> *@
</div>

<!-- Main content (your login view renders here) -->
<main role="main" class="flex-grow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
        @RenderBody()
    </div>
</main>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
