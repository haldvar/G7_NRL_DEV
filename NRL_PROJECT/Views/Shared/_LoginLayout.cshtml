<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NRL_PROJECT</title>

    <!-- Tailwind via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen flex flex-col bg-gradient-to-b from-gray-50 to-gray-100 text-gray-800">

    <!-- HEADER -->
    <header class="bg-white shadow-md sticky top-0 z-50">
        <nav class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">
            <!-- Left side: Logo + navigation -->
            <div class="flex items-center space-x-8">
                <!-- Logo -->
                <a class="text-2xl font-bold text-blue-700 tracking-wide hover:text-blue-800 transition"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    ‚úàÔ∏è NRL_PROJECT
                </a>

                <!-- Desktop menu -->
                <div class="hidden md:flex space-x-6 font-medium">
                    <a class="text-gray-700 hover:text-blue-600 transition" asp-area="" asp-controller="Home" asp-action="About">Om oss</a>
                </div>
            </div>

            <!-- Right side: Statusbar -->
            <div class="hidden md:flex items-center space-x-6 text-sm font-medium">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="text-gray-600">üë§ <strong>@User.Identity.Name</strong></span>
                    <form asp-action="Logout" asp-controller="Account" method="post" class="inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="text-red-600 hover:text-red-800 transition">Logg ut</button>
                    </form>
                }
                else
                {
                    <span class="text-gray-600">üë§ <strong>Du er ikke logget inn</strong></span>
                    <a asp-controller="Account" asp-action="Login" class="text-blue-600 hover:text-blue-800 transition">Logg inn</a>
                }
            </div>


            <!-- Mobile menu button -->
            <button id="menu-btn" class="md:hidden p-2 rounded-lg hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-gray-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </nav>

        <!-- Mobile dropdown -->
        <div id="mobile-menu" class="hidden md:hidden bg-white border-t shadow-sm">
        <div class="px-6 py-4 space-y-2">
            <a class="block text-gray-700 hover:text-blue-600 transition" asp-area="" asp-controller="Home" asp-action="About">Om oss</a>
            
            <!-- Statusbar in mobile menu -->
            <div class="pt-4 border-t">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="block text-gray-600 mb-2">üë§ <strong>@User.Identity.Name</strong></span>
                    <form asp-action="Logout" asp-controller="Account" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="text-red-600 hover:text-red-800 transition">Logg ut</button>
                    </form>
                }
                else
                {
                    <span class="block text-gray-600 mb-2">üë§ <strong>Du er ikke logget inn</strong></span>
                    <a asp-controller="Account" asp-action="Login" class="text-blue-600 hover:text-blue-800 transition">Logg inn</a>
                }
            </div>
        </div>
        </div>

       

      </header>
   

    <!-- MAIN CONTENT -->
    <main role="main" class="flex-grow max-w-5xl mx-auto px-6 py-10">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white border-t mt-8">
        <div class="max-w-7xl mx-auto px-6 py-4 text-sm text-gray-500 flex justify-between items-center">
            <span>&copy; 2025 - NRL_PROJECT</span>
            <a class="hover:text-blue-600 transition" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Mobile menu toggle -->
    <script>
        const menuBtn = document.getElementById("menu-btn");
        const mobileMenu = document.getElementById("mobile-menu");

        menuBtn.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
        });
    </script>
</body>




    <!-- Authentication Links -->
    <ul class="navbar-nav ms-auto">
        
        @if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <form asp-action="Logout" asp-controller="Account" method="post" class="form-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link nav-link" style="border: none; padding: 0;">Logg ut</button>
                </form>
            </li>
        }
    </ul>
