@using NRL_PROJECT.Models
@model ReportStatus

@{
    // Map enum -> fargeklasser (Kartverket-inspirert)
    var cls = Model switch
    {
        ReportStatus.Ny => "bg-slate-100 text-slate-700 ring-1 ring-slate-200",
        ReportStatus.Venter => "bg-amber-50 text-amber-700 ring-1 ring-amber-200",
        ReportStatus.UnderBehandling => "bg-sky-50 text-sky-700 ring-1 ring-sky-200",
        ReportStatus.Godkjent => "bg-emerald-50 text-emerald-700 ring-1 ring-emerald-200",
        ReportStatus.Avvist => "bg-rose-50 text-rose-700 ring-1 ring-rose-200",
        _ => "bg-slate-100 text-slate-700 ring-1 ring-slate-200"
    };
}

<span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium @cls">
    @Model.ToString()
</span>
