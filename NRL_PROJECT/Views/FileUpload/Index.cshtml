@model NRL_PROJECT.Models.FileUploadModel
@{
	ViewData["Title"] = "Last opp fil";
}

<div class="flex justify-center items-center h-screen bg-gray-100">
	<div class="bg-blue-900 text-white p-10 rounded-2xl shadow-lg w-full max-w-md">
		<h1 class="text-2xl font-bold mb-6 text-center">ðŸ“Ž Last opp fil</h1>

		<form asp-action="Index" asp-controller="FileUpload" method="post" enctype="multipart/form-data">
			<div class="mb-4">
				<label asp-for="File" class="block text-sm font-medium mb-2"></label>
				<input asp-for="File" type="file" class="w-full bg-white text-black p-2 rounded-lg" />
				<span asp-validation-for="File" class="text-yellow-300 text-sm"></span>
			</div>

			<button type="submit"
					class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded-lg w-full transition">
				Last opp
			</button>
		</form>

		@if (ViewBag.Message != null)
		{
			<div class="mt-6 bg-green-700 text-white p-3 rounded-lg text-center">
				<p>@ViewBag.Message</p>
				@if (ViewBag.FilePath != null)
				{
					<a href="@ViewBag.FilePath" target="_blank" class="underline text-yellow-300">Vis fil</a>
				}
			</div>
		}
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
