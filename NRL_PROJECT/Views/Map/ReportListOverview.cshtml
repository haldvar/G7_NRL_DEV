@model List<NRL_PROJECT.Models.ObstacleReportData>

<h1 class="text-3xl font-bold text-blue-700 mb-6 text-center">ðŸ“‹ Hinderlogg</h1>

<table class="table-auto w-full border border-gray-300 rounded-lg shadow-md">
    <thead class="bg-gray-100 text-left">
        <tr>
            <th class="px-4 py-2">ObstacleReportID</th>
            <th class="px-4 py-2">Innmelder</th>
            <th class="px-4 py-2">Saksbehandler</th>
            <th class="px-4 py-2">ObstacleID</th>
            <th class="px-4 py-2">ObstacleType</th>
            <th class="px-4 py-2">Kommentar fra innmelder</th>
            <th class="px-4 py-2">Kommentar fra saksbehandler</th>
            <th class="px-4 py-2">Rapportdato</th>
            <th class="px-4 py-2">Rapportstatus</th>
            <th class="px-4 py-2">Koordinater</th>
            <th class="px-4 py-2">Bildefil</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr class="border-t">
                <td class="px-4 py-2">@report.ObstacleReportID</td>
                <td class="px-4 py-2">@report.UserName</td>
                <td class="px-4 py-2">@report.ReviewedByUserID</td>
                <td class="px-4 py-2">@report.ObstacleID</td>
                <td class="px-4 py-2">@report.Obstacle?.ObstacleType</td>
                <td class="px-4 py-2">@report.Obstacle?.ObstacleComment</td>
                <td class="px-4 py-2">@report.ObstacleReportComment</td>
                <td class="px-4 py-2">@report.ObstacleReportDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="px-4 py-2">@report.ObstacleReportStatus</td>
                <td class="px-4 py-2">@report.MapData.CoordinateSummary</td>
                <td class="px-4 py-2">@report.Obstacle?.ObstacleImageURL</td>   <!-- bÃ¸r endres til Ã¥ vise et ikon i de tilfellene det er ei tilknytta fil -->
                
            </tr>
        }
    </tbody>
</table>

