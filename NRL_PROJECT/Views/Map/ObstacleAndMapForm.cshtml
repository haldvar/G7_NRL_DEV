@model NRL_PROJECT.Models.ObstacleData

@section Styles {
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
	<link rel="stylesheet" href="https://unpkg.com/@@geoman-io/leaflet-geoman-free@latest/dist/leaflet-geoman.css" />
}

@{
	ViewBag.HideChrome = true;
}

<form asp-action="SubmitObstacleWithLocation" asp-controller="Map" method="post" enctype="multipart/form-data">
	@Html.AntiForgeryToken()

	<input asp-for="ImageFile" type="file" accept=".jpg,.jpeg,.png,.heic,.webp" 
		   id="imageInput" class="hidden" />
	<input type="hidden" asp-for="MapData.GeoJsonCoordinates" id="GeoJsonCoordinates" />

	<div class="min-h-[100svh] w-full">
		<div class="relative w-full h-[100svh] overflow-hidden">

			<!-- MAP -->
			<div id="mapDraw" class="absolute inset-0 z-0" style="height: 100%; width: 100%;"></div>

			<!-- TOP BANNER -->
			<div id="topBanner" class="fixed inset-x-0 top-0 z-50 bg-yellow-400/90 backdrop-blur border-b border-yellow-500 shadow-md pointer-events-none">
				<div class="py-2 text-center">
					<span class="text-sm font-semibold text-yellow-900 tracking-wide block">
						Helikopter viser din posisjon. Marker objekt med punkt eller linje. Kommenter eller legg ved bilde om du vil.
					</span>
				</div>
			</div>

			<div class="relative z-10 w-full h-full pt-[3rem] pb-24 md:pb-32 pointer-events-none">
				<div class="h-full w-full relative">

					<!-- DRAW TOOLS (HØYRE) -->
					<div class="absolute bottom-4 right-4 z-20 pointer-events-auto">
						<div class="flex flex-col items-center gap-2 rounded-[2rem] bg-white/40 backdrop-blur border border-white/60 p-2 shadow-lg">
							<button id="btnDrawPoint" type="button"
									class="h-20 w-20 md:h-28 md:w-28 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition inline-flex items-center justify-center"
									title="Marker punkt">
								<img src="/icons/map-pin.svg" alt="" class="h-10 w-10 md:h-14 md:w-14 opacity-90 pointer-events-none" />
							</button>
							<div class="h-px w-12 md:w-20 bg-white/60"></div>
							<button id="btnDrawLine" type="button"
									class="h-20 w-20 md:h-28 md:w-28 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition inline-flex items-center justify-center"
									title="Tegn linje (2 punkter)">
								<img src="/icons/line.svg" alt="" class="h-10 w-10 md:h-14 md:w-14 opacity-90 pointer-events-none" />
							</button>
						</div>
					</div>

					<!-- DELETE DRAFT (TOP L) -->
					<div class="absolute top-4 left-4 z-20 pointer-events-auto">
						<button id="btnDeleteDraft" type="button"
								class="h-16 w-16 md:h-24 md:w-24 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition inline-flex items-center justify-center"
								title="Slett utkast" aria-label="Slett utkast">
							<img src="/icons/trash-x.svg" alt="" class="h-8 w-8 md:h-12 md:w-12 opacity-90 pointer-events-none" />
						</button>
					</div>

					<!-- HOME BUTTON (TOP R) -->
					<div class="absolute top-4 right-4 z-20 pointer-events-auto">
						<a asp-area="" asp-controller="Home" asp-action="Index"
						   class="h-16 w-16 md:h-24 md:w-24 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition inline-flex items-center justify-center"
						   title="Til forsiden" aria-label="Til forsiden">
							<img src="/icons/home.svg" alt="" class="h-8 w-8 md:h-12 md:w-12 opacity-90 pointer-events-none" />
						</a>
					</div>

					<!-- ACTION TOOLS (LEFT) -->
					<div class="absolute bottom-4 left-4 z-20 pointer-events-auto">
						<div class="flex flex-col gap-2 rounded-[2rem] bg-white/40 backdrop-blur border border-white/60 p-2 shadow-lg">
							
							<button id="btnUploadImage" type="button"
									class="h-16 w-16 md:h-24 md:w-24 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition inline-flex items-center justify-center"
									title="Legg til bilde">
								<img src="/icons/kamera.svg" alt="" class="h-8 w-8 md:h-12 md:w-12 opacity-90 pointer-events-none" />
							</button>

							<button id="btnComment" type="button"
									class="h-16 w-16 md:h-24 md:w-24 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition inline-flex items-center justify-center"
									title="Legg til kommentar">
								<img src="/icons/kommentar.svg" alt="" class="h-8 w-8 md:h-12 md:w-12 opacity-90 pointer-events-none" />
							</button>

							<button id="btnLocate" type="button"
									class="h-16 w-16 md:h-24 md:w-24 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition inline-flex items-center justify-center"
									title="Finn min posisjon">
								<img src="/icons/helicopter.svg" alt="" class="h-8 w-8 md:h-12 md:w-12 opacity-90 pointer-events-none" />
							</button>
						</div>
					</div>

					<!-- TOASTS -->
					<div id="restoreToast"
						 class="pointer-events-none absolute left-1/2 top-[4rem] z-40 -translate-x-1/2 rounded-xl bg-sky-600/95 px-5 py-3 text-white shadow-2xl font-semibold tracking-wide backdrop-blur transition-opacity duration-500"
						 style="opacity:0;">
						Utkast gjenopprettet
					</div>

					<div id="cancelToast"
						 class="pointer-events-none absolute left-1/2 top-[7rem] z-40 -translate-x-1/2 rounded-xl bg-sky-600/95 px-5 py-3 text-white shadow-2xl font-semibold tracking-wide backdrop-blur transition-opacity duration-500"
						 style="opacity:0;">
						Rapport nullstilt
					</div>

					<div id="imageToast"
						 class="pointer-events-none absolute left-1/2 top-[10rem] z-40 -translate-x-1/2 rounded-xl bg-emerald-600/95 px-5 py-3 text-white shadow-2xl font-semibold tracking-wide backdrop-blur transition-opacity duration-500"
						 style="opacity:0;">
						Bilde vedlagt
					</div>

					<div id="commentToast"
						 class="pointer-events-none absolute left-1/2 top-[13rem] z-40 -translate-x-1/2 rounded-xl bg-emerald-600/95 px-5 py-3 text-white shadow-2xl font-semibold tracking-wide backdrop-blur transition-opacity duration-500"
						 style="opacity:0;">
						Kommentar lagret
					</div>

					<div id="errorToast"
						 class="pointer-events-none absolute left-1/2 top-[16rem] z-40 -translate-x-1/2 rounded-xl bg-rose-600/95 px-5 py-3 text-white shadow-2xl font-semibold tracking-wide backdrop-blur transition-opacity duration-500"
						 style="opacity:0;">
						<span id="errorToastText">Feil ved opplasting</span>
					</div>

					<div id="accuracyToast"
						 class="pointer-events-none absolute left-1/2 top-[19rem] z-40 -translate-x-1/2 rounded-xl bg-orange-500/95 px-6 py-4 text-white shadow-2xl font-semibold tracking-wide backdrop-blur transition-opacity duration-300"
						 style="opacity:0;">
						<span id="accuracyToastText">⚠️ Posisjon for unøyaktig</span>
						<div id="accuracyToastDetail" class="text-sm opacity-90 mt-1"></div>
					</div>

					<div id="commentSheetBackdrop"
						 class="hidden absolute inset-0 z-30 bg-black/20 pointer-events-auto"></div>

				</div>
			</div>

			<!-- COMMENT SHEET -->
			<div id="commentSheet"
				 class="fixed left-0 right-0 bottom-0 z-40 translate-y-full transition-transform duration-300 ease-out pointer-events-auto">
				<div class="rounded-t-3xl border-t border-slate-200 bg-white/95 backdrop-blur shadow-2xl p-5">
					<div class="flex items-center justify-between">
						<h3 class="text-lg font-bold text-green-700">Kommentar</h3>
						<button type="button" id="closeComment"
								class="rounded-full p-2 hover:bg-gray-100 active:scale-95 transition" title="Lukk">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" viewBox="0 0 24 24" fill="none" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
							</svg>
						</button>
					</div>
					<div class="mt-3">
						<textarea asp-for="ObstacleComment" rows="4"
								  class="mt-1 w-full rounded-xl border border-gray-300 bg-white px-3 py-2 text-gray-900 focus:ring-2 focus:ring-blue-500 focus:outline-none"
								  placeholder="(Valgfritt) Beskriv hinderet her."></textarea>
						<span asp-validation-for="ObstacleComment" class="text-red-600 text-sm"></span>
					</div>
				</div>
			</div>

		</div>

		<!-- SUBMIT BUTTON -->
		<div class="fixed inset-x-0 bottom-0 z-50 pointer-events-auto">
			<div class="mx-auto max-w-lg p-3">
				<button type="submit" id="submitBtn"
						class="w-full inline-flex items-center justify-center gap-3 rounded-full bg-blue-600 px-4 py-3 text-xl font-semibold text-white shadow-xl hover:shadow-2xl hover:bg-blue-700 active:scale-[0.98] transition-opacity transition-transform duration-300 ease-out opacity-0 translate-y-2 pointer-events-none">
					<span class="leading-none text-base md:text-xl">Meld hinder</span>
					<svg xmlns="http://www.w3.org/2000/svg"
						 class="h-5 w-5 md:h-6 md:w-6" viewBox="0 0 24 24"
						 fill="none" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
					</svg>
				</button>
			</div>
		</div>

	</div>
</form>

@if (!ViewData.ModelState.IsValid)
{
	<div class="mx-auto max-w-2xl bg-red-600 text-white p-4 rounded-xl mt-6">
		<ul class="list-disc list-inside">
			@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
			{
				<li>@error.ErrorMessage</li>
			}
		</ul>
	</div>
}

@section Scripts {
	<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
	<script src="https://unpkg.com/@@geoman-io/leaflet-geoman-free@@latest/dist/leaflet-geoman.min.js"></script>
	<script src="~/js/obstacle-map-combined.js"></script>
}
