@model NRL_PROJECT.Models.ObstacleData
@section Styles {
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
	<link rel="stylesheet" href="https://unpkg.com/@@geoman-io/leaflet-geoman-free@@latest/dist/leaflet-geoman.css" />
}
@{
	ViewBag.HideChrome = true;
}

<form asp-action="SubmitObstacleWithLocation" asp-controller="Map" method="post" enctype="multipart/form-data">
	@Html.AntiForgeryToken()

	<input asp-for="ImageFile" type="file" accept=".jpg,.jpeg,.png,.heic,.webp" capture="environment"
		   id="imageInput" class="hidden" />
	<input type="hidden" asp-for="MapData.GeoJsonCoordinates" id="GeoJsonCoordinates" />

	<!-- FULLSKJERM CONTAINER -->
	<div class="fixed inset-0 z-0">
		<div id="mapDraw" class="w-full h-full"></div>
	</div>

	<!-- TOP BANNER -->
	<div class="fixed inset-x-0 top-0 z-50 bg-yellow-400/90 backdrop-blur border-b border-yellow-500 shadow-md pointer-events-none">
		<div class="py-3 text-center">
			<span class="text-sm font-semibold text-yellow-900 tracking-wide block px-4">
				Marker objekt med punkt eller linje. Kommenter eller legg ved bilde om du vil.
			</span>
		</div>
	</div>

	<!-- FLOATING BUTTONS -->
	<div class="fixed inset-0 z-10 pointer-events-none">

		<!-- Draw Tools (Right) -->
		<div class="absolute bottom-6 right-4 pointer-events-auto">
			<div class="flex flex-col items-center gap-3 rounded-[2rem] bg-white/40 backdrop-blur border border-white/60 p-3 shadow-xl">
				<button id="btnDrawPoint" type="button"
						class="h-20 w-20 md:h-28 md:w-28 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition"
						title="Marker punkt">
					<img src="/icons/map-pin.svg" alt="" class="h-10 w-10 md:h-14 md:w-14 opacity-90" />
				</button>
				<div class="h-px w-12 md:w-20 bg-white/60"></div>
				<button id="btnDrawLine" type="button"
						class="h-20 w-20 md:h-28 md:w-28 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition"
						title="Tegn linje (2 punkter)">
					<img src="/icons/line.svg" alt="" class="h-10 w-10 md:h-14 md:w-14 opacity-90" />
				</button>
			</div>
		</div>

		<!-- Delete Draft (Top Left) -->
		<div class="absolute top-11 left-4 pointer-events-auto">
			<button id="btnDeleteDraft" type="button"
					class="h-16 w-16 md:h-24 md:w-24 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition"
					title="Slett utkast">
				<img src="/icons/trash-x.svg" alt="" class="h-8 w-8 md:h-12 md:w-12 opacity-90" />
			</button>
		</div>

		<!-- Home Button (Top Right) -->
		<div class="absolute top-11 right-4 pointer-events-auto">
			<a asp-area="" asp-controller="Home" asp-action="Index"
			   class="h-16 w-16 md:h-24 md:w-24 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition inline-flex items-center justify-center">
				<img src="/icons/home.svg" alt="" class="h-8 w-8 md:h-12 md:w-12 opacity-90" />
			</a>
		</div>

		<!-- Action Tools (Bottom Left) -->
		<div class="absolute bottom-6 left-4 pointer-events-auto">
			<div class="flex flex-col gap-3 rounded-[2rem] bg-white/40 backdrop-blur border border-white/60 p-3 shadow-xl">
				<button id="btnUploadImage" type="button"
						class="h-16 w-16 md:h-24 md:w-24 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition"
						title="Legg til bilde">
					<img src="/icons/kamera.svg" alt="" class="h-8 w-8 md:h-12 md:w-12 opacity-90" />
				</button>
				<button id="btnComment" type="button"
						class="h-16 w-16 md:h-24 md:w-24 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition"
						title="Legg til kommentar">
					<img src="/icons/kommentar.svg" alt="" class="h-8 w-8 md:h-12 md:w-12 opacity-90" />
				</button>
				<button id="btnLocate" type="button"
						class="h-16 w-16 md:h-24 md:w-24 rounded-full bg-white/85 backdrop-blur border border-white/70 shadow-lg hover:shadow-xl active:scale-95 transition"
						title="Finn min posisjon">
					<img src="/icons/helicopter.svg" alt="" class="h-8 w-8 md:h-12 md:w-12 opacity-90" />
				</button>
			</div>
		</div>
	</div>

	<!-- TOASTS -->
	<div id="restoreToast" class="pointer-events-none fixed left-1/2 top-20 -translate-x-1/2 z-50 rounded-xl bg-sky-600/95 px-6 py-3 text-white shadow-2xl font-semibold backdrop-blur transition-opacity" style="opacity:0;">
		Utkast gjenopprettet
	</div>
	<div id="cancelToast" class="pointer-events-none fixed left-1/2 top-28 -translate-x-1/2 z-50 rounded-xl bg-sky-600/95 px-6 py-3 text-white shadow-2xl font-semibold backdrop-blur transition-opacity" style="opacity:0;">
		Rapport nullstilt
	</div>
	<div id="imageToast" class="pointer-events-none fixed left-1/2 top-36 -translate-x-1/2 z-50 rounded-xl bg-emerald-600/95 px-6 py-3 text-white shadow-2xl font-semibold backdrop-blur transition-opacity" style="opacity:0;">
		Bilde vedlagt
	</div>
	<div id="commentToast" class="pointer-events-none fixed left-1/2 top-44 -translate-x-1/2 z-50 rounded-xl bg-emerald-600/95 px-6 py-3 text-white shadow-2xl font-semibold backdrop-blur transition-opacity" style="opacity:0;">
		Kommentar lagret
	</div>
	<div id="errorToast" class="pointer-events-none fixed left-1/2 top-52 -translate-x-1/2 z-50 rounded-xl bg-rose-600/95 px-6 py-3 text-white shadow-2xl font-semibold backdrop-blur transition-opacity" style="opacity:0;">
		<span id="errorToastText">Feil ved opplasting</span>
	</div>
	<div id="accuracyToast" class="pointer-events-none fixed left-1/2 top-60 -translate-x-1/2 z-50 rounded-xl bg-orange-500/95 px-6 py-4 text-white shadow-2xl font-semibold backdrop-blur transition-opacity" style="opacity:0;">
		<span id="accuracyToastText">Posisjon for un√∏yaktig</span>
		<div id="accuracyToastDetail" class="text-sm opacity-90 mt-1"></div>
	</div>

	<!-- COMMENT SHEET -->
	<div id="commentSheetBackdrop" class="hidden fixed inset-0 z-40 bg-black/30 backdrop-blur-sm"></div>
	<div id="commentSheet" class="fixed inset-x-0 bottom-0 z-50 translate-y-full transition-transform duration-300 ease-out rounded-t-3xl bg-white/98 backdrop-blur shadow-2xl">
		<div class="p-5">
			<div class="flex items-center justify-between mb-4">
				<h3 class="text-lg font-bold text-green-700">Kommentar</h3>
				<button type="button" id="closeComment" class="p-2 rounded-full hover:bg-gray-100 active:scale-95">
					<svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
					</svg>
				</button>
			</div>
			<label asp-for="ObstacleComment" class="block text-sm font-semibold text-gray-700 mb-2">Kommentar (valgfritt)</label>
			<textarea asp-for="ObstacleComment" rows="5"
					  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:outline-none"
					  placeholder="Beskriv hinderet her..."></textarea>
			<span asp-validation-for="ObstacleComment" class="text-red-600 text-sm"></span>
		</div>
	</div>

	<!-- SUBMIT BUTTON -->
	<div class="fixed inset-x-0 bottom-6 z-40 pointer-events-none">
		<div class="flex justify-center">
			<button type="submit" id="submitBtn"
					class="pointer-events-auto inline-flex items-center gap-3 rounded-full bg-blue-600 px-8 py-5 text-xl font-bold text-white shadow-2xl hover:shadow-3xl hover:bg-blue-700 active:scale-95 transition-all duration-300
                           opacity-0 translate-y-4 pointer-events-none">
				<span>Meld hinder</span>
				<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
				</svg>
			</button>
		</div>
	</div>
</form>

@if (!ViewData.ModelState.IsValid)
{
	<div class="fixed inset-0 flex items-center justify-center z-50 pointer-events-none">
		<div class="bg-red-600 text-white p-6 rounded-2xl shadow-2xl max-w-sm pointer-events-auto">
			<ul class="list-disc list-inside space-y-1">
				@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
				{
					<li>@error.ErrorMessage</li>
				}
			</ul>
		</div>
	</div>
}

@section Scripts {
	<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
	<script src="https://unpkg.com/@@geoman-io/leaflet-geoman-free@@latest/dist/leaflet-geoman.min.js"></script>
	<script src="~/js/obstacle-map-combined.js"></script> <!-- DIN NYESTE JS-FIL -->
}
