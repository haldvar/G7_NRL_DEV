@model NRL_PROJECT.Models.ObstacleData

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/@@geoman-io/leaflet-geoman-free@latest/dist/leaflet-geoman.css" />
}

<div class="text-center mb-10">
    <h1 class="text-4xl md:text-5xl font-extrabold text-sky-400 tracking-tight">üõ†Ô∏è Register Obstacle with Location</h1>
    <p class="text-slate-300 mt-3 text-lg">Enter obstacle details and mark the position on the map.</p>
</div>

<form asp-action="SubmitObstacleWithLocation" asp-controller="Map" method="post" class="space-y-10">
    @Html.AntiForgeryToken()

    <!-- Map Section -->
    <div class="bg-slate-700/60 rounded-2xl p-8 shadow-lg border border-slate-600 z-10">
        <h2 class="text-2xl md:text-3xl font-bold text-amber-400 mb-4 text-center">üó∫Ô∏è Draw Obstacle Location</h2>
        <p class="text-center text-slate-300 mb-8 text-lg">Use the map tools to mark your obstacle. Only one drawing is saved.</p>
        <div id="mapDraw" style="height: 500px;" class="rounded-xl border border-slate-500"></div>
    </div>

    <!-- Obstacle Info -->
    <div class="bg-slate-700/60 rounded-2xl p-8 shadow-lg border border-slate-600">
        <h2 class="text-2xl font-bold text-sky-300 mb-6">üß± Obstacle Information</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="ObstacleType" class="block text-sm font-medium text-sky-200">Obstacle Type</label>
                <input asp-for="ObstacleType" class="mt-1 block w-full bg-slate-900 border-slate-600 text-white rounded-lg px-3 py-2 focus:ring-2 focus:ring-sky-400 focus:outline-none" />
                <span asp-validation-for="ObstacleType" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="ObstacleHeight" class="block text-sm font-medium text-sky-200">Height (m)</label>
                <input asp-for="ObstacleHeight" type="number" step="0.01" class="mt-1 block w-full bg-slate-900 border-slate-600 text-white rounded-lg px-3 py-2 focus:ring-2 focus:ring-sky-400 focus:outline-none" />
                <span asp-validation-for="ObstacleHeight" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="ObstacleWidth" class="block text-sm font-medium text-sky-200">Width (m)</label>
                <input asp-for="ObstacleWidth" type="number" step="0.01" class="mt-1 block w-full bg-slate-900 border-slate-600 text-white rounded-lg px-3 py-2 focus:ring-2 focus:ring-sky-400 focus:outline-none" />
                <span asp-validation-for="ObstacleWidth" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="mt-6">
            <label asp-for="ObstacleComment" class="block text-sm font-medium text-sky-200">Comment</label>
            <textarea asp-for="ObstacleComment" rows="3" class="mt-1 block w-full bg-slate-900 border-slate-600 text-white rounded-lg px-3 py-2 focus:ring-2 focus:ring-sky-400 focus:outline-none"></textarea>
            <span asp-validation-for="ObstacleComment" class="text-red-500 text-sm"></span>
        </div>

        <!-- üìç Hidden map data -->
        <input type="hidden" asp-for="Latitude1" id="Latitude1" />
        <input type="hidden" asp-for="Longitude1" id="Longitude1" />
        <input type="hidden" asp-for="Latitude2" id="Latitude2" />
        <input type="hidden" asp-for="Longitude2" id="Longitude2" />
        <input type="hidden" asp-for="MapData.GeoJsonCoordinates" id="GeoJsonCoordinates" />
    </div>

    <!-- Buttons -->
    <div class="flex flex-col md:flex-row justify-center gap-6 mt-10">
        <button type="submit"
                class="bg-emerald-600 hover:bg-emerald-700 text-white px-10 py-4 rounded-2xl font-bold text-xl shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all">
            ‚úÖ Submit Report
        </button>
        <a asp-action="Index" asp-controller="Home"
           class="bg-red-600 hover:bg-red-700 text-white px-10 py-4 rounded-2xl font-bold text-xl shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all text-center">
            ‚ùå Cancel
        </a>
    </div>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="bg-red-600 text-white p-4 rounded-lg mb-6">
        <ul class="list-disc list-inside">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/@@geoman-io/leaflet-geoman-free@latest/dist/leaflet-geoman.min.js"></script>
    <script>
        const map = L.map('mapDraw').setView([@Model.Latitude1 != 0 ? @Model.Latitude1 : 58.333,
                                              @Model.Longitude1 != 0 ? @Model.Longitude1 : 8.233], 13);

        // Bakgrunnskart (Kartverket WMS)
        L.tileLayer.wms('https://wms.geonorge.no/skwms1/wms.topo', {
            layers: 'topo',
            format: 'image/png',
            transparent: false,
            attribution: '¬© Kartverket'
        }).addTo(map);

        // Aktiver Geoman tegneverkt√∏y
        map.pm.addControls({
            position: 'topleft',
            drawMarker: true,
            drawPolyline: true,
            drawPolygon: false,
            drawCircle: false,
            drawRectangle: false,
            editMode: true,
            removalMode: true
        });

        // N√•r bruker tegner nytt objekt
        map.on('pm:create', e => {
            const geojson = e.layer.toGeoJSON();
            document.getElementById('GeoJsonCoordinates').value = JSON.stringify(geojson.geometry);

            if (geojson.geometry.type === "Point") {
                const [lng, lat] = geojson.geometry.coordinates;
                document.getElementById('Latitude1').value = lat;
                document.getElementById('Longitude1').value = lng;
                document.getElementById('Latitude2').value = 0;
                document.getElementById('Longitude2').value = 0;
            } else if (geojson.geometry.type === "LineString") {
                const [[lng1, lat1], [lng2, lat2]] = geojson.geometry.coordinates;
                document.getElementById('Latitude1').value = lat1;
                document.getElementById('Longitude1').value = lng1;
                document.getElementById('Latitude2').value = lat2;
                document.getElementById('Longitude2').value = lng2;
            }
        });

        // N√•r bruker fjerner tegning
        map.on('pm:remove', () => {
            document.getElementById('GeoJsonCoordinates').value = '';
            document.getElementById('Latitude1').value = 0;
            document.getElementById('Longitude1').value = 0;
            document.getElementById('Latitude2').value = 0;
            document.getElementById('Longitude2').value = 0;
        });
    </script>
}
