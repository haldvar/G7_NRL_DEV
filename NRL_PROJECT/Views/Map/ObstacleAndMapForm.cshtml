@model NRL_PROJECT.Models.ObstacleData

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-draw/dist/leaflet.draw.css" />
}

<div class="mb-10 text-center">
    <h1 class="text-4xl font-extrabold tracking-tight text-sky-400 md:text-5xl">üõ†Ô∏è Register Obstacle with Location</h1>
    <p class="mt-3 text-lg text-slate-300">Enter obstacle details and mark the position on the map.</p>
</div>

<form asp-action="SubmitObstacleWithLocation" asp-controller="Map" method="post" class="space-y-10">
    @Html.AntiForgeryToken()

    <!-- Obstacle Info -->
    <div class="rounded-2xl border border-slate-600 bg-slate-700/60 p-8 shadow-lg">
        <h2 class="mb-6 text-2xl font-bold text-sky-300">üß± Obstacle Information</h2>

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <div>
                <label asp-for="ObstacleType" class="block text-sm font-medium text-sky-200">Obstacle Type</label>
                <input asp-for="ObstacleType" class="mt-1 block w-full rounded-lg border-slate-600 bg-slate-900 px-3 py-2 text-white focus:ring-2 focus:ring-sky-400 focus:outline-none" />
                <span asp-validation-for="ObstacleType" class="text-sm text-red-500"></span>
            </div>
            <div>
                <label asp-for="ObstacleHeight" class="block text-sm font-medium text-sky-200">Height (m)</label>
                <input asp-for="ObstacleHeight" type="number" step="0.01" class="mt-1 block w-full rounded-lg border-slate-600 bg-slate-900 px-3 py-2 text-white focus:ring-2 focus:ring-sky-400 focus:outline-none" />
                <span asp-validation-for="ObstacleHeight" class="text-sm text-red-500"></span>
            </div>
            <div>
                <label asp-for="ObstacleWidth" class="block text-sm font-medium text-sky-200">Width (m)</label>
                <input asp-for="ObstacleWidth" type="number" step="0.01" class="mt-1 block w-full rounded-lg border-slate-600 bg-slate-900 px-3 py-2 text-white focus:ring-2 focus:ring-sky-400 focus:outline-none" />
                <span asp-validation-for="ObstacleWidth" class="text-sm text-red-500"></span>
            </div>
        </div>

        <div class="mt-6">
            <label asp-for="ObstacleComment" class="block text-sm font-medium text-sky-200">Comment</label>
            <textarea asp-for="ObstacleComment" rows="3" class="mt-1 block w-full rounded-lg border-slate-600 bg-slate-900 px-3 py-2 text-white focus:ring-2 focus:ring-sky-400 focus:outline-none"></textarea>
            <span asp-validation-for="ObstacleComment" class="text-sm text-red-500"></span>
        </div>

        <!-- üìç Hidden map data -->
        <input type="hidden" asp-for="Longitude" id="Longitude" />
        <input type="hidden" asp-for="Latitude" id="Latitude" />
        <input type="hidden" asp-for="MapData.GeoJsonCoordinates" id="GeoJsonCoordinates" />
       

    </div>

    <!-- Map Section -->
    <div class="rounded-2xl border border-slate-600 bg-slate-700/60 p-8 shadow-lg">
        <h2 class="mb-4 text-center text-2xl font-bold text-amber-400 md:text-3xl">üó∫Ô∏è Draw Obstacle Location</h2>
        <p class="mb-8 text-center text-lg text-slate-300">Use the map tools to mark your obstacle. Only one drawing is saved.</p>

        <div id="mapDraw" style="height: 400px;"></div>
    </div>

    <!-- Buttons -->
    <div class="mt-10 flex flex-col justify-center gap-6 md:flex-row">
        <button type="submit"
                class="transform rounded-2xl bg-emerald-600 px-10 py-4 text-xl font-bold text-white shadow-lg transition-all hover:-translate-y-1 hover:bg-emerald-700 hover:shadow-2xl">
            ‚úÖ Submit Report
        </button>
        <a asp-action="Index" asp-controller="Home"
           class="transform rounded-2xl bg-red-600 px-10 py-4 text-center text-xl font-bold text-white shadow-lg transition-all hover:-translate-y-1 hover:bg-red-700 hover:shadow-2xl">
            ‚ùå Cancel
        </a>
    </div>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="mb-6 rounded-lg bg-red-600 p-4 text-white">
        <ul class="list-inside list-disc">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

@section Scripts {
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-draw/dist/leaflet.draw.js"></script>
    <script>
        const startLat = @Model.Latitude != 0 ? @Model.Latitude : 58.333;
        const startLng = @Model.Longitude != 0 ? @Model.Longitude : 8.233;

        const map = L.map('mapDraw').setView([startLat, startLng], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        const drawnItems = new L.FeatureGroup();
        map.addLayer(drawnItems);

        const drawControl = new L.Control.Draw({
            edit: { featureGroup: drawnItems },
            draw: {
                polygon: false,
                circle: false,
                rectangle: false,
                marker: true,
                polyline: false
            }
        });
        map.addControl(drawControl);

                map.on('draw:created', function (e) {
            const layer = e.layer;
            drawnItems.clearLayers();
            drawnItems.addLayer(layer);

            const geojson = layer.toGeoJSON();
            const coords = geojson.geometry.coordinates; // [lng, lat]

            document.getElementById('GeoJsonCoordinates').value = JSON.stringify(geojson.geometry);
            document.getElementById('Latitude').value = coords[1];  // lat
            document.getElementById('Longitude').value = coords[0]; // lng
        });


        map.on('draw:deleted', function () {
            document.getElementById('GeoJsonCoordinates').value = '';
            document.getElementById('Latitude').value = 0;
            document.getElementById('Longitude').value = 0;
        });
    </script>
}
