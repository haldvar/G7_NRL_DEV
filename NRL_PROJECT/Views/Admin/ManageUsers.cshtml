@model List<NRL_PROJECT.Models.ViewModels.UserManagementViewModel>
@{
    ViewData["Title"] = "Manage Users";
    var adminCount = ViewBag.AdminCount ?? 0;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Manage Users</h2>
        <span class="badge bg-info text-dark">Total Admins: @adminCount</span>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success:</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th style="width: 30%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    var isLastAdmin = user.CurrentRole == "Admin" && adminCount <= 1;

                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.FirstName @user.LastName</td>
                        <td class="text-center">
                            <span class="badge @(user.CurrentRole switch
                                {
                                    "Admin" => "bg-danger",
                                    "Pilot" => "bg-primary",
                                    "Registrar" => "bg-success",
                                    _ => "bg-secondary"
                                })">@user.CurrentRole</span>
                        </td>
                        <td>
                            @if (isLastAdmin)
                            {
                                <div class="text-muted">Cannot modify or delete the last Admin</div>
                            }
                            else
                            {
                                <div class="d-flex gap-2 flex-wrap">
                                    <!-- Role assignment form -->
                                    <form asp-action="AssignRole" method="post" class="d-flex align-items-center gap-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userID" value="@user.UserID" />
                                        <select name="role" class="form-select form-select-sm w-auto">
                                            @foreach (var role in user.AvailableRoles)
                                            {
                                                <option value="@role" selected="@(role == user.CurrentRole)">@role</option>
                                            }
                                        </select>
                                        <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                                    </form>

                                    <!-- Delete button -->
                                    @if (user.CurrentRole != "Admin")
                                    {
                                        <form asp-action="DeleteUser" method="post"
                                              onsubmit="return confirm('Are you sure you want to delete @user.UserName?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="userID" value="@user.UserID" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Cannot delete Admin</span>
                                    }
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
