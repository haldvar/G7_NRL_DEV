@model List<NRL_PROJECT.Models.ViewModels.UserManagementViewModel>

@{
    ViewData["Title"] = "Brukerhåndtering";
    var adminCount = (int?)ViewBag.AdminCount ?? 0;

    var successMsg = TempData["Success"] as string;
    var errorMsg = TempData["Error"] as string;

    var orgItems = ViewBag.Organizations as List<SelectListItem> ?? new();
}

<div class="min-h-[100svh] w-full bg-gradient-to-b from-green-100 to-blue-100">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">

        <!-- Title -->
        <header class="mb-6">
            <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight text-green-700">
                Brukerhåndtering
            </h1>
            <div class="mt-3 h-1 w-48 rounded-full bg-gradient-to-r from-green-600 via-blue-600 to-green-600"></div>
        </header>

        <!-- Flash messages -->
        @if (!string.IsNullOrWhiteSpace(successMsg))
        {
            <div class="mb-4 rounded-xl border border-green-200 bg-white px-4 py-3 text-green-800 shadow">
                ✔ @successMsg
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(errorMsg))
        {
            <div class="mb-4 rounded-xl border border-rose-200 bg-white px-4 py-3 text-rose-700 shadow">
                ⚠ @errorMsg
            </div>
        }

        <!-- Admin safety -->
        @if (adminCount <= 1)
        {
            <div class="mb-4 rounded-xl border border-amber-200 bg-amber-50 px-4 py-3 text-amber-700 shadow">
                ❗ Det må alltid finnes minst én administrator.
            </div>
        }

        <!-- Action buttons -->
        <div class="mb-6 flex items-center justify-between">
            <div class="text-sm text-gray-700">
                Antall brukere: <b>@Model.Count</b>
            </div>

            <div class="flex gap-3">
                <button type="button"
                        onclick="togglePanel('createOrgForm')"
                        class="rounded-full border border-blue-200 bg-white px-4 py-2 text-sm font-semibold text-blue-700 shadow hover:bg-blue-50">
                    Opprett ny organisasjon
                </button>

                <button type="button"
                        onclick="togglePanel('createUserForm')"
                        class="rounded-full border border-blue-200 bg-white px-4 py-2 text-sm font-semibold text-blue-700 shadow hover:bg-blue-50">
                    Opprett ny bruker
                </button>
            </div>
        </div>

        <!-- CREATE ORG PANEL -->
        <div id="createOrgForm" class="mb-8 hidden">
            <div class="rounded-2xl border bg-white p-5 shadow">

                <h3 class="mb-4 text-xl font-bold text-blue-700">Opprett ny organisasjon</h3>

                <form id="orgForm" class="grid grid-cols-1 gap-4 md:grid-cols-3">
                    @Html.AntiForgeryToken()

                    <div>
                        <label class="text-sm font-medium">Organisasjonsnavn</label>
                        <input id="OrgName" type="text" required class="mt-1 w-full rounded-lg border px-3 py-2" />
                    </div>

                    <div>
                        <label class="text-sm font-medium">Kontakt-e-post</label>
                        <input id="OrgContactEmail" type="email" class="mt-1 w-full rounded-lg border px-3 py-2" />
                    </div>

                    <div class="flex items-end">
                        <button type="button" id="createOrgBtn"
                                class="w-full rounded-full bg-green-600 px-5 py-2.5 text-sm font-semibold text-white shadow hover:bg-green-700">
                            Opprett organisasjon
                        </button>
                    </div>
                </form>

                <p id="orgMessage" class="mt-3 text-sm"></p>
            </div>
        </div>

        <!-- CREATE USER PANEL -->
        <div id="createUserForm" class="mb-8 hidden">
            <div class="rounded-2xl border bg-white p-5 shadow">

                <h3 class="mb-4 text-xl font-bold text-green-700">Opprett ny bruker</h3>

                <form asp-action="CreateUser" method="post" class="space-y-4">
                    @Html.AntiForgeryToken()

                    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">

                        <div>
                            <label class="text-sm font-medium">Brukernavn</label>
                            <input type="text" name="UserName" required class="mt-1 w-full rounded-lg border px-3 py-2" />
                        </div>

                        <div>
                            <label class="text-sm font-medium">E-post</label>
                            <input type="email" name="Email" required class="mt-1 w-full rounded-lg border px-3 py-2" />
                        </div>

                        <div>
                            <label class="text-sm font-medium">Fornavn</label>
                            <input type="text" name="FirstName" required class="mt-1 w-full rounded-lg border px-3 py-2" />
                        </div>

                        <div>
                            <label class="text-sm font-medium">Etternavn</label>
                            <input type="text" name="LastName" required class="mt-1 w-full rounded-lg border px-3 py-2" />
                        </div>

                        <div>
                            <label class="text-sm font-medium">Organisasjon</label>
                            <select name="OrgId" id="OrgDropdown" required class="mt-1 w-full rounded-lg border px-3 py-2">
                                <option value="">— Velg organisasjon —</option>
                                @foreach (var org in orgItems)
                                {
                                    <option value="@org.Value">@org.Text</option>
                                }
                            </select>
                        </div>

                        <div>
                            <label class="text-sm font-medium">Rolle</label>
                            <select name="RoleName" required class="mt-1 w-full rounded-lg border px-3 py-2">
                                <option value="">Velg rolle</option>
                                <option value="Admin">Admin</option>
                                <option value="Pilot">Pilot</option>
                                <option value="Registrar">Registrar</option>
                                <option value="ExternalOrg">ExternalOrg</option>
                            </select>
                        </div>

                        <div>
                            <label class="text-sm font-medium">Passord</label>
                            <input type="password" name="Password" required class="mt-1 w-full rounded-lg border px-3 py-2" />
                        </div>

                        <div>
                            <label class="text-sm font-medium">Bekreft passord</label>
                            <input type="password" name="ConfirmPassword" required class="mt-1 w-full rounded-lg border px-3 py-2" />
                        </div>
                    </div>

                    <button type="submit"
                            class="rounded-full bg-emerald-600 px-5 py-2.5 text-sm font-semibold text-white hover:bg-emerald-700">
                        Opprett bruker
                    </button>
                </form>

            </div>
        </div>

        <!-- USERS TABLE -->
        <div class="rounded-2xl border bg-white shadow-xl">
            <div class="overflow-x-auto">
                <table class="min-w-full text-left text-sm">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="px-4 py-3 font-semibold">Brukernavn</th>
                            <th class="px-4 py-3 font-semibold">E-post</th>
                            <th class="px-4 py-3 font-semibold">Navn</th>
                            <th class="px-4 py-3 font-semibold">Organisasjon</th>
                            <th class="px-4 py-3 font-semibold">Rolle</th>
                            <th class="px-4 py-3 text-right font-semibold">Handling</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y">
                        @foreach (var u in Model)
                        {
                            var isLastAdmin = (u.CurrentRole == "Admin" && adminCount <= 1);

                            <tr class="hover:bg-slate-50">
                                <td class="px-4 py-3">@u.UserName</td>
                                <td class="px-4 py-3">@u.Email</td>
                                <td class="px-4 py-3">@u.FirstName @u.LastName</td>
                                <td class="px-4 py-3">@u.OrgName</td>
                                <td class="px-4 py-3">@u.CurrentRole</td>

                                <td class="px-4 py-3 text-right">

                                    @if (!isLastAdmin)
                                    {
                                        <!-- ASSIGN ORGANISATION -->
                                        <form asp-action="AssignOrganisation" method="post" class="inline-flex gap-2 mb-1">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="UserID" value="@u.UserID" />

                                            <select name="OrgID" class="rounded border px-2 py-1 text-sm">
                                                @foreach (var o in orgItems)
                                                {
                                                    <option value="@o.Value"
                                                            selected="@(u.OrgID.HasValue && u.OrgID.Value.ToString() == o.Value)">
                                                        @o.Text
                                                    </option>
                                                }
                                            </select>

                                            <button class="rounded bg-green-600 px-3 py-1 text-xs text-white hover:bg-green-700">
                                                Lagre org
                                            </button>
                                        </form>

                                        <!-- ASSIGN ROLE -->
                                        <form asp-action="AssignRole" method="post" class="inline-flex gap-2 mb-1">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="UserID" value="@u.UserID" />

                                            <select name="role" class="rounded border px-2 py-1 text-sm">
                                                <option>No Role</option>
                                                @foreach (var r in u.AvailableRoles)
                                                {
                                                    <option value="@r" selected="@(r == u.CurrentRole)">@r</option>
                                                }
                                            </select>

                                            <button class="rounded bg-blue-600 px-3 py-1 text-xs text-white hover:bg-blue-700">
                                                Lagre rolle
                                            </button>
                                        </form>

                                        <!-- DELETE USER -->
                                        <form asp-action="DeleteUser" method="post" class="inline"
                                              onsubmit="return confirm('Slette brukeren @u.UserName?')">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="UserID" value="@u.UserID" />

                                            <button class="rounded bg-rose-600 px-3 py-1 text-xs text-white hover:bg-rose-700">
                                                Slett
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-xs text-gray-500">Kan ikke endre</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>

        function togglePanel(id) {
            document.getElementById(id).classList.toggle("hidden");
        }

        // CREATE ORGANISATION AJAX
        document.getElementById("createOrgBtn").addEventListener("click", function () {

            const name = document.getElementById("OrgName").value.trim();
            const email = document.getElementById("OrgContactEmail").value.trim();
            const msg = document.getElementById("orgMessage");

            if (!name) {
                msg.innerHTML = "⛔ Organisasjonsnavn er påkrevd.";
                msg.className = "text-red-700";
                return;
            }

            fetch("/Admin/CreateOrganisationAjax", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ OrgName: name, OrgContactEmail: email })
            })
            .then(r => r.json())
            .then(data => {

                if (!data.success) {
                    msg.innerHTML = "⛔ " + data.message;
                    msg.className = "text-red-700";
                    return;
                }

            // Add to dropdown
            document.querySelectorAll("select[name='OrgId'], select[name='OrgID'], #OrgDropdown")
            .forEach(select => {
            const opt = document.createElement("option");
            opt.value = data.orgId;
            opt.textContent = data.orgName;
            select.appendChild(opt);
        });

                msg.innerHTML = "✔ Organisasjon opprettet!";
                msg.className = "text-green-700";

                document.getElementById("OrgName").value = "";
                document.getElementById("OrgContactEmail").value = "";
            })
            .catch(() => {
                msg.innerHTML = "⛔ Serverfeil.";
                msg.className = "text-red-700";
            });
        });
    </script>
}
