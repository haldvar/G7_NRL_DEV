@{
    ViewData["Title"] = "Home Page";
}

<div class="min-h-screen w-full bg-gradient-to-b from-green-100 to-blue-100 flex flex-col justify-center items-center font-sans">
    <div class="bg-white shadow-xl rounded-2xl p-8 max-w-lg text-center border border-gray-200">
        <!-- Logo -->
        <div class="mb-6 flex justify-center">
            <div class="w-60 h-20 rounded-lg overflow-hidden shadow-md flex items-center justify-center">
                <img src="~/images/logo-2.png" alt="Logo" class="w-full h-full object-cover" />
            </div>
        </div>

        <!-- Title -->
        <h1 class="text-4xl font-bold text-green-700 mb-4">Welcome!</h1>

        <!-- Description -->
        <p class="text-gray-600 mb-6">
            Learn about 
            <a href="https://learn.microsoft.com/aspnet/core" 
               class="text-blue-600 hover:text-blue-800 font-semibold underline transition">
                building Web apps with ASP.NET Core
            </a>.
        </p>

        <!-- Model content -->
        <div class="text-gray-800 mb-6">
            @Model
        </div>

        <!-- Button -->
        <a asp-action="DataForm"
           class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-full shadow-md hover:bg-blue-700 transition">
            Register Obstacle
        </a>
        
        <!-- Button -->
        <a asp-action="Map"
           class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-full shadow-md hover:bg-blue-700 transition">
            Open Map
        </a>
    </div>
</div>