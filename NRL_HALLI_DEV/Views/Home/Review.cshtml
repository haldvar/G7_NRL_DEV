@model List<NRL_HALLI_DEV.Controllers.MarkerDto>
@{
    ViewData["Title"] = "Review Markers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gradient-to-b from-green-100 to-blue-100 flex items-center justify-center p-6">
  <div class="bg-white shadow-xl rounded-2xl p-8 w-[80vw] max-w-3xl border border-gray-200">
    <div class="mb-6">
      <h1 class="text-2xl font-semibold text-gray-800">Registered Marker Coordinates</h1>
      <p class="text-gray-600">Here are the markers you just added.</p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-gray-700">No markers were submitted.</div>
    }
    else
    {
        <div class="overflow-hidden rounded-xl ring-1 ring-black/5 shadow">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">#</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Latitude</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Longitude</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Added (UTC)</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
              @for (int i = 0; i < Model.Count; i++)
              {
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 text-sm text-gray-700">@(@i + 1)</td>
                    <td class="px-4 py-3 font-mono text-sm text-gray-800">@Model[i].Latitude.ToString("F6")</td>
                    <td class="px-4 py-3 font-mono text-sm text-gray-800">@Model[i].Longitude.ToString("F6")</td>
                    <td class="px-4 py-3 text-sm text-gray-600">
                        @(Model[i].CreatedUtc?.ToString("yyyy-MM-dd HH:mm:ss") ?? "â€”")
                    </td>
                  </tr>
              }
            </tbody>
          </table>
        </div>
    }

    <div class="mt-6">
      <a asp-action="Map"
         class="inline-block px-5 py-2.5 bg-blue-600 text-white rounded-full shadow hover:bg-blue-700 transition">
        Back to Map
      </a>
    </div>
  </div>
</div>
