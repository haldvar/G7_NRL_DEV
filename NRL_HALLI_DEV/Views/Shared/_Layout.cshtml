<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - NRL_HALLI_DEVS</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/output.css"/>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/> *@
    @* <link rel="stylesheet" href="~/NRL_HALLI_DEV.styles.css" asp-append-version="true"/> *@
</head>
<body>
<header>
    <nav class="bg-white border-b border-gray-200 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
            <!-- Logo / Brand -->
            <div class="flex items-center space-x-2">
                <img src="~/images/logo-square.png" alt="Logo" class="h-12.5 w-10 rounded-md" />
                <span class="text-xl font-bold text-green-700 tracking-tight">
                    NRL Halli
                </span>
            </div>

            <!-- Nav Links -->
            <div class="hidden md:flex space-x-6">
                <a href="~/" class="text-gray-700 hover:text-blue-600 font-medium transition">Home</a>
                <a href="/About" class="text-gray-700 hover:text-blue-600 font-medium transition">About</a>
                <a href="/Contact" class="text-gray-700 hover:text-blue-600 font-medium transition">Contact</a>
                <a asp-action="DataForm" class="text-white bg-blue-600 hover:bg-blue-700 font-semibold px-4 py-2 rounded-full shadow transition">
                    Register Obstacle
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden">
                <button id="mobile-menu-button" class="text-gray-600 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden px-4 pb-4">
        <a href="~/" class="block text-gray-700 hover:text-blue-600 py-2">Home</a>
        <a href="/About" class="block text-gray-700 hover:text-blue-600 py-2">About</a>
        <a href="/Contact" class="block text-gray-700 hover:text-blue-600 py-2">Contact</a>
        <a asp-action="DataForm" class="block bg-blue-600 text-white text-center font-semibold py-2 rounded-full mt-2 hover:bg-blue-700">
            Register Obstacle
        </a>
    </div>
</nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - NRL_HALLI_DEVS - <a asp-area="" asp-controller="Home" asp-action="Map">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>